<%- include('partials/header', { user: user }) %>

<div class="container text-center py-5">
    <h1 class="display-4">CertiFried Announcer</h1>
    <p class="lead">The ultimate, multi-platform live stream announcer bot for Discord.</p>
    <div class="mt-4">
        <% if (user) { %>
            <a href="/dashboard" class="btn btn-primary btn-lg"><i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard</a>
        <% } else { %>
            <a href="/login" class="btn btn-primary btn-lg"><i class="fab fa-discord me-2"></i>Login with Discord</a>
        <% } %>
         <a href="https://discord.com/api/oauth2/authorize?client_id=<%= locals.client_id || '#' %>&permissions=8&scope=bot+applications.commands" class="btn btn-secondary btn-lg" target="_blank"><i class="fas fa-plus me-2"></i>Invite Bot</a>
    </div>
</div>

<%- include('partials/footer') %>