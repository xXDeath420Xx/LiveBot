<%- include('partials/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Bot Commands</h1>
            <p class="lead">Here is a list of all available commands for the bot.</p>
        </div>
    </div>

    <% 
    const groupedCommands = {};
    if (commands) {
        commands.forEach(c => {
            const category = c.category || 'General';
            if (!groupedCommands[category]) {
                groupedCommands[category] = [];
            }
            groupedCommands[category].push(c);
        });
    }
    %>

    <% for (const category of Object.keys(groupedCommands).sort()) { %>
        <div class="content-card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= category %></h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th style="width: 20%;">Command</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% groupedCommands[category].forEach(command => { %>
                            <tr>
                                <td><code>/<%= command.name %></code></td>
                                <td><%= command.description %></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% } %>

</div>

<%- include('partials/footer') %>
