<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Status - CertiFried Announcer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard-style.css?v=2.0.0">
    <style>
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes shimmer { 100% { transform: translateX(100%); } }
        .stat-card { animation: fadeIn 0.5s ease-out forwards; }
        .stat-card .stat-value { font-size: 2.2rem; font-weight: 800; line-height: 1; color: var(--header-primary); }
        .stat-card .stat-label { font-size: 0.9rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: .5px; }
        .stat-icon { font-size: 2rem; color: var(--brand-color); background-color: var(--background-tertiary); height: 64px; width: 64px; border-radius: 12px; display: grid; place-items: center; flex-shrink: 0; }
        .streamer-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.25rem; }
        .streamer-card { background-color: var(--background-secondary); border: 1px solid var(--border-color); border-radius: var(--border-radius); padding: 1rem; display: flex; align-items: center; gap: 1rem; transition: all 0.2s ease; }
        .streamer-card:hover { border-color: var(--brand-color); transform: scale(1.02); }
        .streamer-avatar { width: 50px; height: 50px; border-radius: 50%; flex-shrink: 0; border: 2px solid var(--success-color); }
        .streamer-info h5 { margin: 0; font-size: 1.1rem; color: var(--header-primary); }
        .platform-badge { display: inline-block; padding: .2em .5em; margin: .35rem .25rem 0 0; font-size: .75rem; font-weight: 600; line-height: 1; border-radius: 4px; text-decoration: none; color: white; opacity: .9; }
        .platform-twitch { background-color: #9146FF; } .platform-youtube { background-color: #FF0000; } .platform-kick { background-color: #52E252; color: #1A1B1E !important; } .platform-tiktok { background-color: #00f2ea; } .platform-trovo { background-color: #21d464; }
        .health-panel .health-item { display: flex; justify-content: space-between; align-items: center; padding: 0.75rem 0; border-bottom: 1px solid var(--border-color); }
        .status-badge { font-weight: bold; } .status-ok { color: var(--success-color); } .status-error { color: var(--danger-color); }
        .platform-bar { height: 1.5rem; background-color: var(--background-tertiary); border-radius: 4px; margin-bottom: 0.5rem; display: flex; align-items: center; font-size: 0.8rem; color: white; overflow: hidden; }
        .platform-bar .bar-fill { height: 100%; text-indent: 8px; white-space: nowrap; }
        .skeleton { background-color: var(--background-tertiary); position: relative; overflow: hidden; border-radius: 5px;}
        .skeleton::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%; transform: translateX(-100%); background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent); animation: shimmer 1.5s infinite; }
    </style>
</head>
<body>
<%- include('partials/header') %>
<main class="page-container">
    <div class="page-header"><h1 class="display-4">System Status</h1><p id="lastUpdated" class="text-muted small">Fetching latest data...</p></div>
    <div id="botStatusDisplay" class="alert mt-3 text-center" role="alert">Loading bot status...</div>

    <div id="stats-container" class="row g-4 mb-5">
        <% for(let i=0; i < 4; i++) { %>
            <div class="col-md-3"><div class="stat-card d-flex align-items-center gap-3 p-3"><div class="skeleton" style="height:64px;width:64px;border-radius:12px"></div><div class="w-100"><div class="skeleton mb-2" style="height:2rem;width:50%;"></div><div class="skeleton" style="height:1rem;width:80%;"></div></div></div></div>
        <% } %>
    </div>
    <% if (isAuthenticated) { %>
        <div id="admin-health-panel" class="mb-5" style="display:none;">
            <h2 class="mb-3">Admin Health Panel</h2>
            <div class="row g-4">
                <div class="col-lg-8"><div id="log-panel" class="content-card h-100"><div class="d-flex justify-content-between align-items-center mb-2"><h4><i class="fas fa-terminal me-2"></i>System Logs</h4><button id="copyLogsBtn" class="btn btn-sm btn-secondary"><i class="fas fa-copy"></i></button></div><pre id="logContent" class="p-2 small" style="background-color: var(--background-primary); border-radius: 5px; max-height: 250px; overflow-y: auto;">Loading logs...</pre></div></div>
                <div class="col-lg-4"><div id="system-health-panel" class="content-card h-100"><h4><i class="fas fa-heart-pulse me-2"></i>System Health</h4><div id="health-items"><div class="skeleton w-100" style="height: 150px"></div></div></div></div>
            </div>
        </div>
    <% } %>
    <div class="row g-5">
        <div class="col-lg-8">
            <h2 class="mb-3">Live Now</h2>
            <div id="liveStreamersGrid" class="streamer-grid"><% for(let i=0; i < 6; i++) { %><div class="streamer-card skeleton"><div style="height:50px;width:50px;border-radius:50%;" class="skeleton"></div><div class="w-100"><div class="skeleton" style="height:1rem;width:60%"></div><div class="skeleton" style="height:0.8rem;width:40%;margin-top:0.5rem;"></div></div></div><% } %></div>
        </div>
        <div class="col-lg-4">
            <div class="content-card"><h4 class="mb-3">Platform Distribution</h4><div id="platform-bars"><div class="skeleton w-100" style="height: 120px;"></div></div></div>
        </div>
    </div>
</main>
<%- include('partials/footer') %>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const isAuthenticated = <%- isAuthenticated %>;
        let currentBotStatus = <%- JSON.stringify(botStatus) %>; // Pass initial botStatus from server

        // --- UPDATE FUNCTIONS ---
        function updateStats(data) {
            const container = document.getElementById('stats-container');
            if (!container) return;
            container.innerHTML = `\n                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3"><div class="stat-icon"><i class="fas fa-satellite-dish"></i></div><div><div class="stat-value">${data.liveCount ?? 0}</div><div class="stat-label">Live Now</div></div></div></div>\n                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3" style="animation-delay: 50ms"><div class="stat-icon"><i class="fas fa-users"></i></div><div><div class="stat-value">${data.totalStreamers ?? 0}</div><div class="stat-label">Total Tracked</div></div></div></div>\n                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3" style="animation-delay: 100ms"><div class="stat-icon"><i class="fas fa-server"></i></div><div><div class="stat-value">${data.totalGuilds ?? 0}</div><div class="stat-label">Total Guilds</div></div></div></div>\n                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3" style="animation-delay: 150ms"><div class="stat-icon"><i class="fas fa-bullhorn"></i></div><div><div class="stat-value">${data.totalAnnouncements ?? 0}</div><div class="stat-label">Announcements</div></div></div></div>`;
        }

        function updateLiveStreamers(liveStreamers) {
            const container = document.getElementById('liveStreamersGrid');
            if (!container) return;

            if (currentBotStatus.state !== 'ONLINE') {
                container.innerHTML = '<div class="text-muted">Bot is offline. Live data unavailable.</div>';
                return;
            }

            if (!Array.isArray(liveStreamers) || liveStreamers.length === 0) {
                container.innerHTML = '<div class="text-muted">No one is live right now.</div>';
                return;
            }
            container.innerHTML = liveStreamers.map(streamerItem => {
                if (!streamerItem || !streamerItem.username) return ''; // Skip invalid streamer data
                // TEMPORARY: Replacing platformsHtml with a static string to isolate SyntaxError
                const platformsHtml = '<div>PLATFORMS HERE</div>';
                return `\n                <div class="streamer-card">\n                    <img src="${streamerItem.avatar_url}" class="streamer-avatar">\n                    <div class="streamer-info">\n                        <h5>${streamerItem.username}</h5>\n                        <div>${platformsHtml}</div>\n                    </div>\n                </div>`;
            }).join('');
        }

        function updatePlatformDistribution(dist, total) {
            const container = document.getElementById('platform-bars');
            if (!container || !Array.isArray(dist)) return;

            if (currentBotStatus.state !== 'ONLINE') {
                container.innerHTML = '<div class="text-muted">Bot is offline. Platform distribution unavailable.</div>';
                return;
            }

            if (dist.length === 0) {
                container.innerHTML = '<div class="text-muted">No live streamers to show distribution.</div>';
                return;
            }

            // Filter out any invalid entries before mapping
            container.innerHTML = dist.filter(p => p && p.platform).map(p => {
                const percentage = total > 0 ? ((p.count / total) * 100).toFixed(1) : "0.0";
                const platformName = p.platform;
                return `<div class="mb-2">\n                            <span class="text-muted small">${platformName.charAt(0).toUpperCase() + platformName.slice(1)} (${p.count})</span>\n                            <div class="platform-bar">\n                                <div class="bar-fill platform-${platformName.toLowerCase()}" style="width:${percentage}%;">${percentage}%</div>\n                            </div>\n                        </div>`;
            }).join('');
        }

        function updateAdminPanel(data) {
            const panel = document.getElementById('admin-health-panel');
            if (!panel) return;
            panel.style.display = 'block';
            const healthContainer = document.getElementById('health-items');
            const statusHtml = (status) => status === 'ok' || status === 'online' ? '<span class="status-badge status-ok">Online</span>' : `<span class="status-badge status-error">${status || 'Error'}</span>`;
            if (healthContainer) {
                healthContainer.innerHTML = `\n                    <div class="health-item"><span>App Status</span>${statusHtml(data.app?.status)}</div>\n                    <div class="health-item"><span>App Uptime</span><span class="text-muted">${data.app?.uptime ? new Date(data.app.uptime * 1000).toISOString().substr(11, 8) : 'N/A'}</span></div>\n                    <div class="health-item"><span>Database</span>${statusHtml(data.db?.status)}</div>\n                    <div class="health-item"><span>Twitch API</span>${statusHtml(data.api?.twitch)}</div>`;
            }
            fetchLogs();
        }

        async function fetchLogs() {
            const logEl = document.getElementById('logContent');
            if (!logEl) return;
            try {
                const resp = await fetch('/api/authenticated-logs');
                console.log('fetchLogs - Response:', resp); // ADDED LOGGING
                if (!resp.ok) {
                    logEl.textContent = `Error fetching logs: ${resp.status} ${resp.statusText}`; // More detailed error
                    return;
                }
                const data = await resp.json();
                console.log('fetchLogs - Data:', data); // ADDED LOGGING
                logEl.textContent = data.error ? `Error: ${data.error}` : data.logs;
            } catch(e) {
                console.error('fetchLogs - Catch Error:', e); // ADDED LOGGING
                logEl.textContent = `Failed to load logs: ${e.message}`;
            }
        }

        // --- MAIN FETCH LOGIC ---
        async function fetchData() {
            try {
                const response = await fetch('/api/status-data');
                console.log('fetchData - Response:', response); // ADDED LOGGING
                if (!response.ok) throw new Error(`API returned status ${response.status} ${response.statusText}`); // More detailed error
                const data = await response.json();
                console.log('fetchData - Data:', data); // ADDED LOGGING

                updateStats(data);
                updateLiveStreamers(data.liveStreamers);
                updatePlatformDistribution(data.platformDistribution, data.totalStreamers);

                if (isAuthenticated) {
                    updateAdminPanel(data);
                }

                document.getElementById('lastUpdated').textContent = `Last Updated: ${new Date().toLocaleTimeString()}`;
            } catch (error) {
                console.error('Error fetching or rendering status data:', error);
                document.getElementById('lastUpdated').textContent = `Error updating data. Please check console.`;
                // Even if data fetch fails, try to update stats with 0s or N/A
                updateStats({ liveCount: 0, totalStreamers: 0, totalGuilds: 0, totalAnnouncements: 0 });
                updateLiveStreamers([]);
                updatePlatformDistribution([], 0);
            }
        }

        const botStatusDisplay = document.getElementById('botStatusDisplay');

        const statusClasses = {
            OFFLINE: 'alert-dark',
            STARTING: 'alert-info',
            ONLINE: 'alert-success',
            MAINTENANCE: 'alert-warning',
            ERROR: 'alert-danger'
        };

        let dataFetchInterval = null;

        async function fetchBotStatus() {
            try {
                const response = await fetch('/api/status');
                const status = await response.json();
                currentBotStatus = status; // Update current bot status

                botStatusDisplay.textContent = status.message || 'Status unavailable.';
                botStatusDisplay.className = `alert mt-3 text-center ${statusClasses[status.state] || 'alert-secondary'}`;

                // Always fetch detailed data, but display functions will handle bot online status
                fetchData();

                // Manage periodic data fetching based on bot status
                if (status.state === 'ONLINE') {
                    if (!dataFetchInterval) {
                        dataFetchInterval = setInterval(fetchData, 30000); // Poll detailed data every 30 seconds
                    }
                } else {
                    if (dataFetchInterval) {
                        clearInterval(dataFetchInterval);
                        dataFetchInterval = null;
                    }
                }

            } catch (error) {
                console.error('Error fetching bot status:', error);
                botStatusDisplay.textContent = 'Could not connect to the bot's status endpoint.';
                botStatusDisplay.className = 'alert mt-3 text-center alert-danger';
                // If bot status cannot be fetched, assume offline for data display
                currentBotStatus = { state: 'OFFLINE', message: 'Could not connect to bot.' };
                fetchData(); // Attempt to fetch data, display functions will show offline messages
                if (dataFetchInterval) {
                    clearInterval(dataFetchInterval);
                    dataFetchInterval = null;
                }
            }
        }

        // Initial and periodic fetches
        fetchBotStatus(); // Call once immediately to set initial bot status and visibility
        setInterval(fetchBotStatus, 2000); // Poll bot status every 2 seconds

        if (isAuthenticated) {
            const copyBtn = document.getElementById('copyLogsBtn');
            if(copyBtn) {
                copyBtn.addEventListener('click', () => {
                    navigator.clipboard.writeText(document.getElementById('logContent').textContent);
                });
            }
        }
    });
</script>
</body>
</html>