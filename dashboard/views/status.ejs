<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Status - CertiFried Announcer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard-style.css?v=2.0.5">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes shimmer { 100% { transform: translateX(100%); } }
        .stat-card { animation: fadeIn 0.5s ease-out forwards; }
        .stat-card .stat-value { font-size: 2.2rem; font-weight: 800; line-height: 1; color: var(--header-primary); }
        .stat-card .stat-label { font-size: 0.9rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: .5px; }
        .stat-icon { font-size: 2rem; color: var(--brand-color); background-color: var(--background-tertiary); height: 64px; width: 64px; border-radius: 12px; display: grid; place-items: center; flex-shrink: 0; }
        .streamer-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.25rem; }
        .streamer-card { background-color: var(--background-secondary); border: 1px solid var(--border-color); border-radius: var(--border-radius); padding: 1rem; display: flex; align-items: center; gap: 1rem; }
        .streamer-avatar { width: 50px; height: 50px; border-radius: 50%; flex-shrink: 0; border: 2px solid var(--success-color); }
        .streamer-info h5 { margin: 0 0 0.25rem; font-size: 1.1rem; color: var(--header-primary); }
        .platform-icon-twitch { color: #9146FF; }
        .platform-icon-youtube { color: #FF0000; }
        .platform-icon-tiktok { color: #00f2ea; }
        .platform-icon-trovo { color: #21d464; }
        .platform-img-icon { width: 1em; height: 1em; vertical-align: -0.125em; margin-right: 0.25rem; }
        .health-panel .health-item { display: flex; justify-content: space-between; align-items: center; padding: 0.75rem 0; border-bottom: 1px solid var(--border-color); }
        .status-badge { font-weight: bold; } .status-ok { color: var(--success-color); } .status-error { color: var(--danger-color); }
        .platform-bar { height: 1.5rem; background-color: var(--background-tertiary); border-radius: 4px; margin-bottom: 0.5rem; display: flex; align-items: center; font-size: 0.8rem; color: white; overflow: hidden; }
        .platform-bar .bar-fill { height: 100%; text-indent: 8px; white-space: nowrap; }
        .skeleton { background-color: var(--background-tertiary); position: relative; overflow: hidden; border-radius: 5px;}
        .skeleton::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%; transform: translateX(100%); background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent); animation: shimmer 1.5s infinite; }
    </style>
</head>
<body>
<%- include('partials/header') %>
<main class="page-container">
    <div class="page-header"><h1 class="display-4">System Status</h1><p id="lastUpdated" class="text-muted small">Fetching latest data...</p></div>
    <div id="stats-container" class="row g-4 mb-5">
        <% for(let i=0; i < 4; i++) { %>
            <div class="col-md-3"><div class="stat-card d-flex align-items-center gap-3 p-3"><div class="skeleton" style="height:64px;width:64px;border-radius:12px"></div><div class="w-100"><div class="skeleton mb-2" style="height:2rem;width:50%;"></div><div class="skeleton" style="height:1rem;width:80%;"></div></div></div></div>
        <% } %>
    </div>
    <% if (user && user.isSuperAdmin) { %>
        <div id="admin-health-panel" class="mb-5" style="display:none;">
            <h2 class="mb-3">Admin Health Panel</h2>
            <div class="row g-4">
                <div class="col-lg-8"><div id="log-panel" class="content-card h-100"><div class="d-flex justify-content-between align-items-center mb-2"><h4><i class="fas fa-terminal me-2"></i>System Logs</h4><button id="copyLogsBtn" class="btn btn-sm btn-secondary"><i class="fas fa-copy"></i></button></div><pre id="logContent" class="p-2 small" style="background-color: var(--background-primary); border-radius: 5px; max-height: 250px; overflow-y: auto;">Loading logs...</pre></div></div>
                <div class="col-lg-4"><div id="system-health-panel" class="content-card h-100"><h4><i class="fas fa-heart-pulse me-2"></i>System Health</h4><div id="health-items"><div class="skeleton w-100" style="height: 150px"></div></div><button id="reinitBtn" class="btn btn-warning btn-sm mt-3"><i class="fas fa-sync-alt me-2"></i>Re-initialize Bot</button></div></div>
            </div>
        </div>
    <% } %>
    <div class="row g-5">
        <div class="col-lg-8">
            <h2 class="mb-3">Live Now</h2>
            <div id="liveStreamersGrid" class="streamer-grid"><% for(let i=0; i < 6; i++) { %><div class="streamer-card skeleton"><div style="height:50px;width:50px;border-radius:50%;" class="skeleton"></div><div class="w-100"><div class="skeleton" style="height:1rem;width:60%"></div><div class="skeleton" style="height:0.8rem;width:40%;margin-top:0.5rem;"></div></div></div><% } %></div>
        </div>
        <div class="col-lg-4">
            <div class="content-card"><h4 class="mb-3">Platform Distribution</h4><div id="platform-bars"><div class="skeleton w-100" style="height: 120px;"></div></div></div>
        </div>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const isAuthenticated = <%- user ? 'true' : 'false' %>;

        // --- UPDATE FUNCTIONS ---
        function updateStats(data) {
            const container = document.getElementById('stats-container');
            if (!container) return;
            container.innerHTML = `
                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3"><div class="stat-icon"><i class="fas fa-satellite-dish"></i></div><div><div class="stat-value">${data.liveCount ?? 0}</div><div class="stat-label">Live Now</div></div></div></div>
                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3" style="animation-delay: 50ms"><div class="stat-icon"><i class="fas fa-users"></i></div><div><div class="stat-value">${data.totalStreamers ?? 0}</div><div class="stat-label">Total Tracked</div></div></div></div>
                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3" style="animation-delay: 100ms"><div class="stat-icon"><i class="fas fa-server"></i></div><div><div class="stat-value">${data.totalGuilds ?? 0}</div><div class="stat-label">Total Guilds</div></div></div></div>
                <div class="col-md-6 col-lg-3"><div class="stat-card d-flex align-items-center gap-3 p-3" style="animation-delay: 150ms"><div class="stat-icon"><i class="fas fa-bullhorn"></i></div><div><div class="stat-value">${data.totalAnnouncements ?? 0}</div><div class="stat-label">Announcements</div></div></div></div>`;
        }

        function updateLiveStreamers(liveStreamers) {
            const grid = document.getElementById('liveStreamersGrid');
            if (!grid) return;
            if (!Array.isArray(liveStreamers) || liveStreamers.length === 0) {
                grid.innerHTML = '<div class="text-muted">No one is live right now.</div>';
                return;
            }
            grid.innerHTML = liveStreamers.map(s => {
                if (!s || !s.username) return '';

                let platformsHtml = '';
                if (s.live_platforms && s.live_platforms.length > 0) {
                    platformsHtml = s.live_platforms.map(p => {
                        // Use Font Awesome for Kick, consistent with other platforms
                        const icon = p.platform === 'kick'
                            ? `<i class="fas fa-k platform-icon-fa platform-icon-kick"></i>`
                            : `<i class="fab fa-${p.platform.toLowerCase()} platform-icon-${p.platform.toLowerCase()}"></i>`;
                        return `<a href="${p.url}" target="_blank" class="badge bg-dark text-decoration-none me-1" title="${s.username} on ${p.platform}">
                                    ${icon} ${p.platform.charAt(0).toUpperCase() + p.platform.slice(1)}
                                 </a>`;
                    }).join('');
                }

                return `
                <div class="streamer-card">
                    <img src="${s.avatar_url || '/images/default-icon.png'}" alt="${s.username}" class="streamer-avatar">
                    <div class="streamer-info">
                        <h5>${s.username}</h5>
                        <div class="linked-platforms-display mt-1">
                            ${platformsHtml}
                        </div>
                    </div>
                </div>`;
            }).join('');
        }

        function updatePlatformDistribution(dist, total) {
            const container = document.getElementById('platform-bars');
            if (!container || !Array.isArray(dist)) return;
            container.innerHTML = dist.filter(p => p && p.platform).map(p => {
                const percentage = total > 0 ? ((p.count / total) * 100).toFixed(1) : "0.0";
                const platformName = p.platform;
                return `<div class="mb-2">
                            <span class="text-muted small">${platformName.charAt(0).toUpperCase() + platformName.slice(1)} (${p.count})</span>
                            <div class="platform-bar">
                                <div class="bar-fill platform-${platformName.toLowerCase()}" style="width:${percentage}%;">${percentage}%</div>
                            </div>
                        </div>`;
            }).join('');
        }

        function updateAdminPanel(data) {
            const panel = document.getElementById('admin-health-panel');
            if (!panel) return;
            panel.style.display = 'block';
            const healthContainer = document.getElementById('health-items');
            if (healthContainer) {
                if (!data.app && !data.db && !data.api) {
                    healthContainer.innerHTML = '<div class="text-muted small">System health data is currently unavailable.</div>';
                } else {
                    const statusHtml = (status) => (status?.toLowerCase() === 'ok' || status?.toLowerCase() === 'online') ? `<span class="status-badge status-ok">${status.charAt(0).toUpperCase() + status.slice(1)}</span>` : `<span class="status-badge status-error">${(status || 'Error').charAt(0).toUpperCase() + (status || 'Error').slice(1)}</span>`;
                    healthContainer.innerHTML = `
                        <div class="health-item"><span>App Status</span>${statusHtml(data.app?.status)}</div>
                        <div class="health-item"><span>App Uptime</span><span class="text-muted">${data.app?.uptime || 'N/A'}</span></div>
                        <div class="health-item"><span>Database</span>${statusHtml(data.db?.status)}</div>
                        <div class="health-item"><span>Twitch API</span>${statusHtml(data.api?.twitch)}</div>`;
                }
            }
            fetchLogs();
        }

        async function fetchLogs() {
            const logEl = document.getElementById('logContent');
            if (!logEl) return;
            try {
                const resp = await fetch('/api/authenticated-logs');
                if (!resp.ok) {
                    let errorText = `Server returned HTTP ${resp.status}`;
                    try {
                        const errorJson = await resp.json();
                        errorText = errorJson.message || errorJson.error || errorText;
                    } catch (e) { /* Ignore if response is not JSON */ }
                    throw new Error(errorText);
                }
                const data = await resp.json();
                const logs = data.error ? `Server Error: ${data.error}` : (data.logs || 'No logs available.');
                if (typeof logs === 'string') {
                    logEl.textContent = logs.trim().split('\n').reverse().join('\n');
                } else {
                    logEl.textContent = logs;
                }
            } catch(e) {
                console.error("Log fetch error:", e);
                logEl.textContent = `Failed to fetch logs. Error: ${e.message}`;
            }
        }

        // --- MAIN FETCH LOGIC ---
        async function fetchData() {
            try {
                const response = await fetch('/api/status-data');
                if (!response.ok) throw new Error(`API returned status ${response.status}`);
                const data = await response.json();

                updateStats(data);
                updateLiveStreamers(data.liveStreamers);
                updatePlatformDistribution(data.platformDistribution, data.totalStreamers);

                if (isAuthenticated) {
                    updateAdminPanel(data);
                }

                document.getElementById('lastUpdated').textContent = `Last Updated: ${new Date().toLocaleTimeString()}`;
            } catch (error) {
                console.error('Error fetching or rendering status data:', error);
                const lastUpdatedEl = document.getElementById('lastUpdated');
                if (lastUpdatedEl) lastUpdatedEl.textContent = `Error updating data. Retrying in 30s.`;
            }
        }

        if (isAuthenticated) {
            const copyBtn = document.getElementById('copyLogsBtn');
            if(copyBtn) {
                copyBtn.addEventListener('click', () => {
                    navigator.clipboard.writeText(document.getElementById('logContent').textContent);
                });
            }

            const reinitBtn = document.getElementById('reinitBtn');
            if(reinitBtn) {
                reinitBtn.addEventListener('click', async () => {
                    if (confirm('Are you sure you want to re-initialize the bot? This will restart the application.')) {
                        reinitBtn.disabled = true;
                        reinitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Restarting...';
                        try {
                            const response = await fetch('/api/admin/reinit-bot', { method: 'POST' });
                            const result = await response.json();
                            alert(result.message || (result.success ? 'Success' : 'Unknown error'));
                        } catch (error) {
                            alert('Failed to send re-initialization request.');
                        } finally {
                            reinitBtn.disabled = false;
                            reinitBtn.innerHTML = '<i class="fas fa-sync-alt me-2"></i>Re-initialize Bot';
                        }
                    }
                });
            }
        }

        fetchData();
        setInterval(fetchData, 30000);
    });
</script>
<%- include('partials/footer') %>
</body>
</html>