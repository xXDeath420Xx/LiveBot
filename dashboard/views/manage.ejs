<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage <%= guild.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard-style.css?v=2.0.7">
    <style>
        .platform-icon-twitch { color: #9146FF; }
        .platform-icon-youtube { color: #FF0000; }
        .platform-icon-tiktok { color: #00f2ea; }
        .platform-icon-trovo { color: #21d464; }
        .platform-img-icon { width: 1em; height: 1em; vertical-align: -0.125em; margin-right: 0.25rem; }
        .linked-platforms-display .badge { margin-right: 5px; }
    </style>
</head>
<body class="manage-page">
<%- include('partials/header') %>
<div class="manage-container">
    <aside class="manage-sidebar">
        <div class="sidebar-card text-center">
            <% if (guild.icon) { %><img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=128" alt="<%= guild.name %> Icon" class="sidebar-guild-icon"><% } else { %><div class="sidebar-guild-icon-placeholder"><h2 class="m-0"><%= guild.name.charAt(0) %></h2></div><% } %>
            <h4 class="mt-2 mb-1"><%= guild.name %></h4>
            <a href="/dashboard" class="btn btn-sm btn-secondary mt-2">Change Server</a>
        </div>
        <div class="sidebar-card">
            <h5><i class="fas fa-signal me-2"></i>Live Status</h5>
            <div id="live-status-container" class="live-status-scroll mb-2"><p class="text-center small">Loading...</p></div>
        </div>
        <div class="sidebar-card flex-grow-1">
            <h5><i class="fas fa-toolbox me-2"></i>Toolbox</h5>
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <button class="nav-link text-start active" id="v-pills-streamers-tab" data-bs-toggle="pill" data-bs-target="#streamers-tab" type="button" role="tab">Streamer List</button>
                <button class="nav-link text-start" id="v-pills-core-tab" data-bs-toggle="pill" data-bs-target="#core-tab" type="button" role="tab">Core Settings</button>
                <button class="nav-link text-start" id="v-pills-appearance-tab" data-bs-toggle="pill" data-bs-target="#appearance-tab" type="button" role="tab">Appearance</button>
                <button class="nav-link text-start" id="v-pills-teams-tab" data-bs-toggle="pill" data-bs-target="#teams-tab" type="button" role="tab">Twitch Teams</button>
                <button class="nav-link text-start" id="v-pills-csv-tab" data-bs-toggle="pill" data-bs-target="#csv-tab" type="button" role="tab">Mass Management</button>
            </div>
        </div>
    </aside>
    <main class="manage-main-content">
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade" id="core-tab" role="tabpanel"><%- include('partials/manage/core', {guild, settings, channels, roles}) %></div>
            <div class="tab-pane fade" id="appearance-tab" role="tabpanel"><%- include('partials/manage/appearance', {guild, channels}) %></div>
            <div class="tab-pane fade" id="teams-tab" role="tabpanel"><%- include('partials/manage/teams', {guild, channels, teamSubscriptions, roles}) %></div>
            <div class="tab-pane fade" id="csv-tab" role="tabpanel"><%- include('partials/manage/mass', {guild, channels}) %></div>
            <div class="tab-pane fade show active" id="streamers-tab" role="tabpanel">
                <%- include('partials/manage/add-streamer', {guild, channels}) %>
                <div class="content-card mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2><i class="fas fa-stream me-2"></i>Tracked Individuals (<%= totalSubscriptions %>)</h2>
                        <button class="btn btn-primary" id="bulk-actions-btn" data-bs-toggle="modal" data-bs-target="#bulk-actions-modal" disabled>Bulk Actions</button>
                    </div>
                    <p class="text-muted small">This list shows all subscribed streamers, including those from team syncs.</p>
                    <div class="accordion" id="channelsAccordion">
                        <% 
                        const userGroupData = {};
                        Object.entries(channelsData).forEach(([channelId, data], index) => {
                            const totalMembers = data.streamers.length;
                            if (totalMembers === 0) return;
                        %>
                        <div class="accordion-item mb-2">
                            <h2 class="accordion-header"><button class="accordion-button <%= index > 0 ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= channelId %>"><%= data.name %><span class="badge bg-secondary ms-auto me-2"><%= totalMembers %> user(s)</span></button></h2>
                            <div id="collapse-<%= channelId %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" data-bs-parent="#channelsAccordion">
                                <div class="accordion-body">
                                    <% data.streamers.forEach(userGroup => {
                                        const userGroupId = userGroup.discord_user_id || userGroup.primaryDisplayName;
                                        userGroupData[userGroupId] = userGroup;
                                    %> 
                                        <div class="list-group-item d-flex flex-column align-items-start px-0 py-2">
                                            <div class="d-flex justify-content-between align-items-center w-100">
                                                <div class="d-flex align-items-center flex-wrap">
                                                    <input class="form-check-input me-3" type="checkbox" value="<%= userGroupId %>" data-subscriptions="<%= userGroup.subscriptions.map(s => s.subscription_id).join(',') %>">
                                                    <img src="<%= userGroup.primaryAvatarUrl || '/images/default-icon.png' %>" alt="<%= userGroup.primaryDisplayName %>" style="width:32px; height:32px; border-radius:50%;" class="me-2">
                                                    <strong class="me-2"><%= userGroup.primaryDisplayName %></strong>
                                                    <% if (userGroup.discord_user_id) { %><span class="badge bg-info ms-2">ID: <%= userGroup.discord_user_id %></span><% } %>
                                                    <div class="linked-platforms-display ms-2">
                                                        <% userGroup.linkedPlatforms.forEach(p => { %>
                                                            <a href="<%= p.url %>" target="_blank" class="badge bg-dark text-decoration-none">
                                                                <% if (p.platform === 'kick') { %>
                                                                    <img src="/uploads/kick.png" class="platform-img-icon" alt="Kick">
                                                                <% } else { %>
                                                                    <i class="fab fa-<%= p.platform %> platform-icon-<%= p.platform %>"></i>
                                                                <% } %>
                                                                <%= p.username %>
                                                            </a>
                                                        <% }); %>
                                                    </div>
                                                </div>
                                                <div>
                                                    <% if (isBotOwner) { %>
                                                        <button class="btn btn-sm btn-info" title="Copy User to another Server" data-bs-toggle="modal" data-bs-target="#copyUserModal"
                                                                data-discord-user-id="<%= userGroup.discord_user_id || '' %>"
                                                                data-normalized-username="<%= userGroup.primaryDisplayName %>">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    <% } %>
                                                    <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#streamerSettingsModal" data-user-group-id="<%= userGroupId %>"><i class="fas fa-cog"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('partials/manage/edit-streamer-modal', { channels }) %>
<%- include('partials/manage-team-modal', { guild, channels, roles }) %>
<%- include('partials/manage/bulk-actions-modal', { channels }) %>

<% if (isBotOwner) { %>
    <div class="modal fade" id="copyUserModal" tabindex="-1" aria-labelledby="copyUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="copyUserModalLabel">Copy User Subscriptions</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Copy all platform subscriptions for <strong id="copy-user-name"></strong> to a new server.</p>
                    <input type="hidden" id="copy-user-discord-id">
                    <input type="hidden" id="copy-user-normalized-username">
                    <div class="mb-3">
                        <label for="copy-target-guild" class="form-label">1. Destination Server</label>
                        <select id="copy-target-guild" class="form-select">
                            <option selected disabled value="">Choose a server...</option>
                            <% manageableGuilds.forEach(g => { %>
                                <% if (g.id !== guild.id) { %>
                                    <option value="<%= g.id %>"><%= g.name %></option>
                                <% } %>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="copy-target-channel" class="form-label">2. Announcement Channel</label>
                        <select id="copy-target-channel" class="form-select" disabled>
                            <option>Select a server first</option>
                        </select>
                    </div>
                    <div id="copy-user-status" class="mt-3"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="executeCopyUserBtn" disabled>Execute Copy</button>
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/footer') %>
<script>
    const userGroupData = <%- JSON.stringify(userGroupData) %>;

    document.addEventListener('DOMContentLoaded', function() {
        // Bulk actions
        const bulkActionsBtn = document.getElementById('bulk-actions-btn');
        const userCheckboxes = document.querySelectorAll('input[type="checkbox"][data-subscriptions]');
        const executeBulkUpdateBtn = document.getElementById('execute-bulk-update');

        userCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                const anyChecked = Array.from(userCheckboxes).some(c => c.checked);
                bulkActionsBtn.disabled = !anyChecked;
            });
        });

        executeBulkUpdateBtn.addEventListener('click', async () => {
            const selectedSubscriptions = Array.from(userCheckboxes).filter(c => c.checked).map(c => c.dataset.subscriptions).join(',').split(',').filter(Boolean);
            const selectedChannels = Array.from(document.getElementById('bulk-channels-select').selectedOptions).map(o => o.value);
            const statusDiv = document.getElementById('bulk-actions-status');

            if (selectedSubscriptions.length === 0) {
                statusDiv.innerHTML = `<div class="alert alert-danger">No users selected.</div>`;
                return;
            }

            executeBulkUpdateBtn.disabled = true;
            executeBulkUpdateBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Applying...';
            statusDiv.innerHTML = '';

            try {
                const response = await fetch(`/api/manage/<%= guild.id %>/bulk-update-channels`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ subscriptionIds: selectedSubscriptions, channelIds: selectedChannels })
                });
                const result = await response.json();
                if (response.ok && result.success) {
                    statusDiv.innerHTML = `<div class="alert alert-success">${result.message}</div>`;
                    setTimeout(() => location.reload(), 2000);
                } else {
                    statusDiv.innerHTML = `<div class="alert alert-danger">Error: ${result.message || 'An unknown error occurred.'}</div>`;
                }
            } catch (error) {
                statusDiv.innerHTML = '<div class="alert alert-danger">A network error occurred.</div>';
            } finally {
                executeBulkUpdateBtn.disabled = false;
                executeBulkUpdateBtn.innerHTML = 'Apply Changes';
            }
        });

        // Tab persistence
        const lastTab = localStorage.getItem('lastTab-' + '<%= guild.id %>');
        if (lastTab) {
            const tabEl = document.querySelector(lastTab);
            if(tabEl) tabEl.click();
        }
        document.querySelectorAll('.nav-pills .nav-link').forEach(tab => {
            tab.addEventListener('shown.bs.tab', e => localStorage.setItem('lastTab-' + '<%= guild.id %>', '#' + e.target.id));
        });

        // Live status fetcher
        async function fetchGuildLiveStatus() {
            try {
                const response = await fetch(`/api/guilds/<%= guild.id %>/livestatus`);
                if (!response.ok) {
                    let errorText = `API request failed: ${response.status}`;
                    try {
                        const errorJson = await response.json();
                        errorText = errorJson.message || errorJson.error || errorText;
                    } catch(e) { /* ignore */ }
                    throw new Error(errorText);
                }
                const data = await response.json();
                const container = document.getElementById("live-status-container");

                if (data.length > 0) {
                    container.innerHTML = data.map(s => {
                        if (!s.username) return '';
                        let platformsHtml = '';
                        if (s.live_platforms && s.live_platforms.length > 0) {
                            platformsHtml = s.live_platforms.map(p => {
                                const icon = p.platform === 'kick'
                                    ? `<img src="/uploads/kick.png" class="platform-img-icon" alt="Kick">`
                                    : `<i class="fab fa-${p.platform.toLowerCase()} platform-icon-${p.platform.toLowerCase()}"></i>`;
                                return `<a href="${p.url}" target="_blank" title="${s.username} on ${p.platform}" class="badge bg-dark text-decoration-none me-1">
                                            ${icon} ${p.username}
                                        </a>`;
                            }).join(' ');
                        }

                        return `
                        <div class="live-streamer-card">
                            <img src="${s.avatar_url}" class="live-avatar">
                            <div class="live-info">
                                <strong>${s.username}</strong>
                                <div class="linked-platforms-display ms-0 mt-1">
                                    ${platformsHtml}
                                </div>
                            </div>
                        </div>`;
                    }).join('');
                } else {
                    container.innerHTML = '<p class="text-center small text-muted">No one is live.</p>';
                }
            } catch (error) {
                console.error("Failed to load guild live status:", error);
                document.getElementById("live-status-container").innerHTML = `<p class="text-danger text-center small" title="${error.message}">Failed to load status.</p>`;
            }
        }
        fetchGuildLiveStatus();
        setInterval(fetchGuildLiveStatus, 60000);

        // Streamer Settings Modal
        const streamerSettingsModal = document.getElementById("streamerSettingsModal");
        let currentUserGroup = null;

        async function handleStreamerAction(payload, button = null) {
            if (button) button.disabled = true;
            const statusDiv = document.getElementById('edit-streamer-status');
            statusDiv.innerHTML = '';
            try {
                const response = await fetch(`/api/manage/<%= guild.id %>/edit-streamer`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                if (response.ok && result.success) {
                    statusDiv.innerHTML = `<div class="alert alert-success">${result.message}</div>`;
                    setTimeout(() => location.reload(), 1500);
                } else {
                    statusDiv.innerHTML = `<div class="alert alert-danger">Error: ${result.message || 'An unknown error occurred.'}</div>`;
                    if (button) button.disabled = false;
                }
            } catch (error) {
                console.error("Streamer action failed:", error);
                statusDiv.innerHTML = '<div class="alert alert-danger">A network error occurred. Please check the console for details.</div>';
                if (button) button.disabled = false;
            }
        }

        streamerSettingsModal.addEventListener("show.bs.modal", event => {
            const btn = event.relatedTarget;
            const userGroupId = btn.dataset.userGroupId;
            currentUserGroup = userGroupData[userGroupId];
            
            document.getElementById('modal-streamer-name').textContent = currentUserGroup.primaryDisplayName;
            document.getElementById('edit-discord-user-id').value = currentUserGroup.discord_user_id;
            document.getElementById('edit-avatar-url').value = currentUserGroup.subscriptions[0]?.override_avatar_url || currentUserGroup.primaryAvatarUrl;

            const linkedAccountsContainer = document.getElementById('linked-accounts-container');
            linkedAccountsContainer.innerHTML = '';
            currentUserGroup.linkedPlatforms.forEach(p => {
                const div = document.createElement('div');
                div.className = 'd-flex justify-content-between align-items-center mb-2';
                div.innerHTML = `
                    <span><i class="fab fa-${p.platform} me-2"></i>${p.username}</span>
                    <button class="btn btn-sm btn-danger unlink-btn" data-streamer-id="${p.streamer_id}" data-username="${p.username}" data-platform="${p.platform}">Unlink</button>
                `;
                linkedAccountsContainer.appendChild(div);
            });

            const channelSelect = document.getElementById('edit-channels-select');
            const selectedChannels = new Set(currentUserGroup.subscriptions.map(s => s.announcement_channel_id || 'default'));
            Array.from(channelSelect.options).forEach(option => {
                option.selected = selectedChannels.has(option.value);
            });

            const hasYoutubePlatform = currentUserGroup.linkedPlatforms.some(p => p.platform === 'youtube');
            const youtubeSettingsContainer = document.getElementById('youtube-settings-container');
            if (hasYoutubePlatform) {
                youtubeSettingsContainer.style.display = 'block';
                const youtubeSub = currentUserGroup.subscriptions.find(s => s.platform === 'youtube');
                document.getElementById('edit-youtube-content-preference').value = youtubeSub?.youtube_content_preference || 'default';
            } else {
                youtubeSettingsContainer.style.display = 'none';
            }

            document.getElementById('edit-custom-message').value = currentUserGroup.subscriptions[0]?.custom_message || '';
            document.getElementById('edit-streamer-status').innerHTML = '';
        });

        document.getElementById('linked-accounts-container').addEventListener('click', e => {
            if (e.target.classList.contains('unlink-btn')) {
                if (!confirm('Are you sure you want to unlink this platform for this user on this server?')) return;
                const payload = {
                    unlink: { 
                        streamer_id: e.target.dataset.streamerId,
                        username: e.target.dataset.username,
                        platform: e.target.dataset.platform
                    }
                };
                handleStreamerAction(payload, e.target);
            }
        });

        document.getElementById('save-streamer-settings').addEventListener('click', (e) => {
            const payload = {
                discordUserId: currentUserGroup.discord_user_id,
                primaryUsername: currentUserGroup.primaryDisplayName,
                newChannels: Array.from(document.getElementById('edit-channels-select').selectedOptions).map(o => o.value),
                youtubeContentPreference: document.getElementById('edit-youtube-content-preference').value,
                customMessage: document.getElementById('edit-custom-message').value,
                avatarUrl: document.getElementById('edit-avatar-url').value
            };
            handleStreamerAction(payload, e.target);
        });

        document.getElementById('remove-streamer-btn').addEventListener('click', (e) => {
            if (!confirm('Are you sure you want to remove ALL subscriptions for this user from this server?')) return;
            const payload = {
                discordUserId: currentUserGroup.discord_user_id,
                primaryUsername: currentUserGroup.primaryDisplayName,
                removeAll: true
            };
            handleStreamerAction(payload, e.target);
        });

        document.getElementById('reinitGuildButton')?.addEventListener('click', async (event) => {
            const btn = event.currentTarget;
            if (!confirm('Are you sure you want to re-initialize this server? This can help resolve issues with roles or announcements.')) return;

            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Re-initializing...';

            try {
                const response = await fetch(`/api/manage/<%= guild.id %>/reinit-guild`, { method: 'POST' });
                const result = await response.json();
                if (response.ok && result.success) {
                    alert(result.message);
                } else {
                    alert(`Error: ${result.message || 'An unknown error occurred.'}`);
                }
            } catch (error) {
                alert('A network error occurred.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

        // Team Resync Button Handler
        document.querySelectorAll('.resync-team-btn').forEach(button => {
            button.addEventListener('click', async (event) => {
                const btn = event.currentTarget;
                const teamId = btn.dataset.teamId;
                const teamName = btn.dataset.teamName;
                const statusDiv = document.getElementById(`team-status-${teamId}`);

                if (!confirm(`Are you sure you want to resync the team '${teamName}'?`)) return;

                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Syncing...';
                statusDiv.innerHTML = '';

                try {
                    const response = await fetch(`/api/manage/<%= guild.id %>/resync-team`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ teamId })
                    });
                    const result = await response.json();
                    if (response.ok && result.success) {
                        statusDiv.innerHTML = `<div class="alert alert-success alert-sm">${result.message}</div>`;
                    } else {
                        statusDiv.innerHTML = `<div class="alert alert-danger alert-sm">Error: ${result.message || 'Unknown error'}</div>`;
                    }
                } catch (error) {
                    statusDiv.innerHTML = `<div class="alert alert-danger alert-sm">Network error during sync.</div>`;
                } finally {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-sync-alt"></i> Resync Members';
                }
            });
        });

        <% if (isBotOwner) { %>
        const copyUserModal = document.getElementById('copyUserModal');
        const targetGuildSelect = document.getElementById('copy-target-guild');
        const targetChannelSelect = document.getElementById('copy-target-channel');
        const executeCopyBtn = document.getElementById('executeCopyUserBtn');

        copyUserModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            document.getElementById('copy-user-name').textContent = button.getAttribute('data-normalized-username');
            document.getElementById('copy-user-discord-id').value = button.getAttribute('data-discord-user-id');
            document.getElementById('copy-user-normalized-username').value = button.getAttribute('data-normalized-username');

            document.getElementById('copy-user-status').innerHTML = '';
            targetGuildSelect.selectedIndex = 0;
            targetChannelSelect.innerHTML = '<option>Select a server first</option>';
            targetChannelSelect.disabled = true;
            executeCopyBtn.disabled = true;
        });

        targetGuildSelect.addEventListener('change', async () => {
            const guildId = targetGuildSelect.value;
            targetChannelSelect.disabled = true;
            targetChannelSelect.innerHTML = '<option>Loading channels...</option>';
            executeCopyBtn.disabled = true;

            if (!guildId) return;

            try {
                const response = await fetch(`/api/guilds/${guildId}/channels`);
                if (!response.ok) throw new Error(`Failed to fetch channels (${response.status})`);
                const channels = await response.json();

                targetChannelSelect.innerHTML = '<option value="default">Server Default</option>';
                if(channels && channels.length > 0){
                    channels.forEach(channel => {
                        targetChannelSelect.innerHTML += `<option value="${channel.id}">${channel.name}</option>`;
                    });
                }
                targetChannelSelect.disabled = false;
                executeCopyBtn.disabled = false;
            } catch (error) {
                console.error('Error fetching channels:', error);
                targetChannelSelect.innerHTML = '<option>Error loading channels</option>';
                document.getElementById('copy-user-status').innerHTML = `<div class="alert alert-danger small">${error.message}</div>`;
            }
        });

        executeCopyBtn.addEventListener('click', async function() {
            const btn = this;
            const statusDiv = document.getElementById('copy-user-status');
            const payload = {
                sourceGuildId: '<%= guild.id %>',
                targetGuildId: targetGuildSelect.value,
                targetChannelId: targetChannelSelect.value,
                discordUserId: document.getElementById('copy-user-discord-id').value,
                normalizedUsername: document.getElementById('copy-user-normalized-username').value
            };

            if (!payload.targetGuildId || !payload.targetChannelId) {
                statusDiv.innerHTML = '<div class="alert alert-danger">Please select a destination server and channel.</div>';
                return;
            }

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Copying...';
            statusDiv.innerHTML = '';

            try {
                const response = await fetch('/api/copy-user', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                if (response.ok && result.success) {
                    statusDiv.innerHTML = `<div class="alert alert-success">${result.message}</div>`;
                } else {
                    statusDiv.innerHTML = `<div class="alert alert-danger">Error: ${result.message || 'An unknown error occurred.'}</div>`;
                }
            } catch (error) {
                statusDiv.innerHTML = '<div class="alert alert-danger">A network error occurred.</div>';
            } finally {
                btn.disabled = false;
                btn.innerHTML = 'Execute Copy';
            }
        });
        <% } %>

    });
</script>
</body>
</html>