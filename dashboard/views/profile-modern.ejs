<%- include('partials/modern-header', {
    pageTitle: 'Profile',
    additionalCSS: []
}) %>

<div class="app-layout">
    <%- include('partials/sidebar', {
        user: user,
        currentPage: 'profile'
    }) %>

    <div class="main-content">
        <%- include('partials/topbar', {
            breadcrumbs: [
                { label: 'Dashboard', url: '/dashboard' },
                { label: 'Profile', url: '/profile' }
            ],
            user: user
        }) %>

        <div class="content">
            <div class="content-container">
                <!-- Page Header -->
                <div class="page-header">
                    <div class="page-header-top">
                        <div>
                            <h1 class="page-title">User Profile</h1>
                            <p class="page-description">
                                View and manage your Discord account information
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Profile Card -->
                <div style="margin-bottom: var(--spacing-8);">
                    <div class="card">
                        <div class="card-body" style="padding: var(--spacing-8);">
                            <div style="display: flex; align-items: start; gap: var(--spacing-6);">
                                <div>
                                    <img src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png?size=256` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>"
                                         alt="<%= user.username %>"
                                         style="width: 128px; height: 128px; border-radius: var(--radius-xl); border: 4px solid var(--color-border-primary);">
                                </div>
                                <div style="flex: 1;">
                                    <div style="display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-2);">
                                        <h2 style="font-size: var(--font-size-2xl); font-weight: 700; color: var(--color-text-primary); margin: 0;">
                                            <%= user.username %>
                                        </h2>
                                        <% if (user.discriminator && user.discriminator !== '0') { %>
                                            <span style="font-size: var(--font-size-lg); color: var(--color-text-secondary);">#<%= user.discriminator %></span>
                                        <% } %>
                                    </div>
                                    <div style="display: flex; align-items: center; gap: var(--spacing-4); margin-bottom: var(--spacing-6);">
                                        <span style="font-size: var(--font-size-sm); color: var(--color-text-secondary);">
                                            <i class="fas fa-id-badge"></i> <%= user.id %>
                                        </span>
                                        <% if (user.email) { %>
                                            <span style="font-size: var(--font-size-sm); color: var(--color-text-secondary);">
                                                <i class="fas fa-envelope"></i> <%= user.email %>
                                            </span>
                                        <% } %>
                                    </div>
                                    <div style="display: flex; gap: var(--spacing-3);">
                                        <a href="https://discord.com/users/<%= user.id %>" target="_blank" class="btn btn-sm btn-primary">
                                            <i class="fab fa-discord"></i> View on Discord
                                        </a>
                                        <a href="/settings" class="btn btn-sm btn-outline">
                                            <i class="fas fa-cog"></i> Settings
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Statistics -->
                <div style="margin-bottom: var(--spacing-8);">
                    <h2 style="font-size: var(--font-size-xl); font-weight: 600; color: var(--color-text-primary); margin-bottom: var(--spacing-4);">Account Statistics</h2>
                    <div class="grid grid-cols-3">
                        <div class="card card-hover">
                            <div class="card-body stat-card">
                                <i class="fas fa-server" style="font-size: var(--font-size-2xl); color: var(--color-primary-400); margin-bottom: var(--spacing-3);"></i>
                                <div class="stat-value"><%= totalGuilds %></div>
                                <div class="stat-label">Servers</div>
                                <div style="font-size: var(--font-size-xs); color: var(--color-text-tertiary); margin-top: var(--spacing-2);">
                                    Servers you can manage
                                </div>
                            </div>
                        </div>
                        <div class="card card-hover">
                            <div class="card-body stat-card">
                                <i class="fas fa-video" style="font-size: var(--font-size-2xl); color: var(--color-accent-purple); margin-bottom: var(--spacing-3);"></i>
                                <div class="stat-value"><%= totalStreamers %></div>
                                <div class="stat-label">Streamers</div>
                                <div style="font-size: var(--font-size-xs); color: var(--color-text-tertiary); margin-top: var(--spacing-2);">
                                    Across all servers
                                </div>
                            </div>
                        </div>
                        <div class="card card-hover">
                            <div class="card-body stat-card">
                                <i class="fas fa-users" style="font-size: var(--font-size-2xl); color: var(--color-accent-blue); margin-bottom: var(--spacing-3);"></i>
                                <div class="stat-value"><%= totalMembers.toLocaleString() %></div>
                                <div class="stat-label">Total Reach</div>
                                <div style="font-size: var(--font-size-xs); color: var(--color-text-tertiary); margin-top: var(--spacing-2);">
                                    Combined server members
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Information -->
                <div style="margin-bottom: var(--spacing-8);">
                    <h2 style="font-size: var(--font-size-xl); font-weight: 600; color: var(--color-text-primary); margin-bottom: var(--spacing-4);">Account Information</h2>
                    <div class="card">
                        <div class="card-body">
                            <div style="display: flex; flex-direction: column; gap: var(--spacing-4);">
                                <div style="display: flex; justify-content: space-between; padding: var(--spacing-4); border-radius: var(--radius-lg); background: var(--color-bg-secondary);">
                                    <div>
                                        <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">Username</div>
                                        <div style="font-size: var(--font-size-base); font-weight: 600; color: var(--color-text-primary);">
                                            <%= user.username %><% if (user.discriminator && user.discriminator !== '0') { %>#<%= user.discriminator %><% } %>
                                        </div>
                                    </div>
                                    <div style="font-size: var(--font-size-sm); color: var(--color-text-tertiary);">
                                        <i class="fas fa-lock"></i> Managed by Discord
                                    </div>
                                </div>

                                <div style="display: flex; justify-content: space-between; padding: var(--spacing-4); border-radius: var(--radius-lg); background: var(--color-bg-secondary);">
                                    <div>
                                        <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">User ID</div>
                                        <div style="font-size: var(--font-size-base); font-weight: 600; color: var(--color-text-primary); font-family: 'Courier New', monospace;">
                                            <%= user.id %>
                                        </div>
                                    </div>
                                    <button onclick="navigator.clipboard.writeText('<%= user.id %>')" class="btn btn-sm btn-outline">
                                        <i class="fas fa-copy"></i> Copy
                                    </button>
                                </div>

                                <% if (user.email) { %>
                                <div style="display: flex; justify-content: space-between; padding: var(--spacing-4); border-radius: var(--radius-lg); background: var(--color-bg-secondary);">
                                    <div>
                                        <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">Email</div>
                                        <div style="font-size: var(--font-size-base); font-weight: 600; color: var(--color-text-primary);">
                                            <%= user.email %>
                                        </div>
                                    </div>
                                    <div style="font-size: var(--font-size-sm); color: var(--color-text-tertiary);">
                                        <i class="fas fa-lock"></i> Managed by Discord
                                    </div>
                                </div>
                                <% } %>

                                <div style="display: flex; justify-content: space-between; padding: var(--spacing-4); border-radius: var(--radius-lg); background: var(--color-bg-secondary);">
                                    <div>
                                        <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary); margin-bottom: var(--spacing-1);">Account Type</div>
                                        <div style="font-size: var(--font-size-base); font-weight: 600; color: var(--color-text-primary);">
                                            <i class="fab fa-discord"></i> Discord OAuth
                                        </div>
                                    </div>
                                    <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                                        <span style="display: inline-block; width: 8px; height: 8px; border-radius: 50%; background-color: var(--color-success);"></span>
                                        <span style="font-size: var(--font-size-sm); color: var(--color-success);">Connected</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Servers List -->
                <div style="margin-bottom: var(--spacing-8);">
                    <h2 style="font-size: var(--font-size-xl); font-weight: 600; color: var(--color-text-primary); margin-bottom: var(--spacing-4);">Your Servers</h2>
                    <div class="card">
                        <div class="card-body">
                            <% if (guilds && guilds.length > 0) { %>
                                <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: var(--spacing-4);">
                                    <% guilds.slice(0, 8).forEach(guild => { %>
                                        <a href="/manage/<%= guild.id %>" style="display: flex; align-items: center; padding: var(--spacing-3); border-radius: var(--radius-lg); background: var(--color-bg-secondary); border: 1px solid var(--color-border-primary); transition: all var(--transition-base); text-decoration: none; color: inherit;"
                                           onmouseover="this.style.borderColor='var(--color-primary-400)'"
                                           onmouseout="this.style.borderColor='var(--color-border-primary)'">
                                            <img src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=64` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>"
                                                 alt="<%= guild.name %>"
                                                 style="width: 40px; height: 40px; border-radius: var(--radius-lg); margin-right: var(--spacing-3);">
                                            <div style="flex: 1; min-width: 0;">
                                                <div style="font-size: var(--font-size-sm); font-weight: 600; color: var(--color-text-primary); white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                                    <%= guild.name %>
                                                </div>
                                            </div>
                                        </a>
                                    <% }); %>
                                </div>
                                <% if (guilds.length > 8) { %>
                                    <div style="margin-top: var(--spacing-4); text-align: center;">
                                        <a href="/servers" class="btn btn-outline">
                                            View All Servers (<%= guilds.length %>)
                                        </a>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <div style="text-align: center; padding: var(--spacing-6); color: var(--color-text-secondary);">
                                    <i class="fas fa-server" style="font-size: var(--font-size-3xl); margin-bottom: var(--spacing-3); opacity: 0.5;"></i>
                                    <p>No servers found</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Danger Zone -->
                <div style="margin-bottom: var(--spacing-8);">
                    <h2 style="font-size: var(--font-size-xl); font-weight: 600; color: var(--color-danger); margin-bottom: var(--spacing-4);">Danger Zone</h2>
                    <div class="card" style="border-color: var(--color-danger);">
                        <div class="card-body">
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <div style="font-size: var(--font-size-base); font-weight: 600; color: var(--color-text-primary); margin-bottom: var(--spacing-2);">
                                        Disconnect Account
                                    </div>
                                    <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary);">
                                        Logout from the dashboard. You can sign back in anytime.
                                    </div>
                                </div>
                                <a href="/logout" class="btn btn-sm" style="background-color: var(--color-danger); color: white;">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('partials/modern-footer') %>
