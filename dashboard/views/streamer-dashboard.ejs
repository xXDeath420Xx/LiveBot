<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Streamer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard-style.css?v=2.0.0">
</head>
<body>
<%- include('partials/header') %>
<main class="page-container">
    <div class="page-header">
        <h1>Your Streamer Dashboard</h1>
        <p class="lead">Manage your personal announcement settings and view your stream analytics.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <!-- Subscriptions Accordion -->
            <div class="content-card mb-4">
                <h4><i class="fas fa-cog me-2"></i>Your Subscriptions</h4>
                <!-- ... (subscriptions accordion as before) ... -->
            </div>

            <!-- Manual Schedule Form -->
            <div class="content-card">
                <h4><i class="fas fa-calendar-alt me-2"></i>Set Your Weekly Schedule</h4>
                <p class="text-muted small">Set your official streaming schedule. This will be shown to users instead of the prediction. Leave a day blank to indicate you are not streaming.</p>
                <form action="/dashboard/streamer/schedule/update" method="POST">
                    <div class="row g-3">
                        <% const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']; %>
                        <% days.forEach(day => { %>
                            <div class="col-md-6">
                                <label class="form-label"><%= day %></label>
                                <input type="text" name="<%= day.toLowerCase() %>" class="form-control" value="<%- schedule[day.toLowerCase()] || '' %>" placeholder="e.g., 8pm - 11pm EST">
                            </div>
                        <% }) %>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-3">Save Schedule</button>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- ... (stats card) ... -->
        </div>
    </div>
</main>
<%- include('partials/footer') %>
</body>
</html>