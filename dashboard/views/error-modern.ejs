<%- include('partials/modern-header', {
    pageTitle: 'Error',
    additionalCSS: []
}) %>

<style>
/* Error Page Container */
.error-page-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-8);
    background: linear-gradient(135deg, rgba(88, 101, 242, 0.05) 0%, rgba(155, 89, 182, 0.05) 100%);
}

/* Enhanced Empty State for Error */
.error-empty-state {
    text-align: center;
    max-width: 700px;
    padding: var(--spacing-12) var(--spacing-8);
    background: var(--color-bg-primary);
    border: 2px solid var(--color-border-primary);
    border-radius: var(--radius-2xl);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    transition: all var(--transition-base);
}

.error-empty-state:hover {
    border-color: var(--color-danger);
    box-shadow: 0 15px 50px rgba(240, 71, 71, 0.15);
}

/* Large Friendly Icon Circle */
.error-icon-wrapper {
    width: 140px;
    height: 140px;
    margin: 0 auto var(--spacing-8);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(240, 71, 71, 0.2), rgba(230, 126, 34, 0.2));
    border-radius: 50%;
    position: relative;
    animation: floatIcon 3s ease-in-out infinite;
}

@keyframes floatIcon {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

.error-icon-wrapper::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: conic-gradient(from 0deg, var(--color-danger), var(--color-warning), var(--color-danger));
    border-radius: 50%;
    opacity: 0;
    animation: spin 3s linear infinite;
    z-index: -1;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.error-icon-wrapper i {
    font-size: 64px;
    color: var(--color-danger);
    z-index: 1;
}

/* Error Code Display */
.error-code-display {
    display: inline-block;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    background: var(--color-bg-secondary);
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-lg);
    font-family: var(--font-family-mono);
    margin-bottom: var(--spacing-4);
    border: 1px solid var(--color-border-primary);
}

/* Error Title */
.error-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-3);
    line-height: var(--line-height-tight);
}

/* Error Message */
.error-message {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-6);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

/* Helpful Suggestions Section */
.error-suggestions {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-xl);
    padding: var(--spacing-6);
    margin-bottom: var(--spacing-8);
    text-align: left;
}

.suggestions-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
}

.suggestions-title i {
    color: var(--color-info);
}

.suggestions-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
}

.suggestions-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-3);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.suggestions-list li::before {
    content: 'âœ“';
    color: var(--color-success);
    font-weight: var(--font-weight-bold);
    flex-shrink: 0;
    margin-top: 2px;
}

/* Action Buttons Group */
.error-actions {
    display: flex;
    gap: var(--spacing-3);
    justify-content: center;
    flex-wrap: wrap;
}

.error-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-6);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-lg);
    border: none;
    cursor: pointer;
    transition: all var(--transition-base);
    text-decoration: none;
}

.error-btn-primary {
    background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600));
    color: white;
    box-shadow: 0 4px 12px rgba(88, 101, 242, 0.3);
}

.error-btn-primary:hover {
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    box-shadow: 0 6px 16px rgba(88, 101, 242, 0.4);
    transform: translateY(-2px);
}

.error-btn-secondary {
    background: var(--color-bg-secondary);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border-primary);
}

.error-btn-secondary:hover {
    background: var(--color-dark-500);
    border-color: var(--color-primary-400);
    transform: translateY(-2px);
}

.error-btn i {
    font-size: var(--font-size-lg);
}

/* Responsive Design */
@media (max-width: 768px) {
    .error-page-container {
        padding: var(--spacing-4);
    }

    .error-empty-state {
        padding: var(--spacing-8) var(--spacing-4);
        border-radius: var(--radius-xl);
    }

    .error-icon-wrapper {
        width: 110px;
        height: 110px;
        margin-bottom: var(--spacing-6);
    }

    .error-icon-wrapper i {
        font-size: 48px;
    }

    .error-title {
        font-size: var(--font-size-2xl);
    }

    .error-message {
        font-size: var(--font-size-sm);
    }

    .error-actions {
        flex-direction: column;
    }

    .error-btn {
        width: 100%;
        justify-content: center;
    }

    .error-suggestions {
        padding: var(--spacing-4);
    }
}

@media (max-width: 480px) {
    .error-icon-wrapper {
        width: 90px;
        height: 90px;
    }

    .error-icon-wrapper i {
        font-size: 36px;
    }

    .error-title {
        font-size: var(--font-size-xl);
    }

    .error-code-display {
        font-size: var(--font-size-xs);
    }
}
</style>

<div class="error-page-container">
    <div class="error-empty-state">
        <!-- Large Friendly Error Icon -->
        <div class="error-icon-wrapper">
            <i class="fas fa-exclamation-circle"></i>
        </div>

        <!-- Error Code Badge -->
        <div class="error-code-display">
            ERROR OCCURRED
        </div>

        <!-- Error Title -->
        <h1 class="error-title">Oops! Something Went Wrong</h1>

        <!-- Error Message -->
        <p class="error-message">
            <%= error || 'We encountered an unexpected error while processing your request. Our team has been notified and will investigate this right away.' %>
        </p>

        <!-- Helpful Suggestions Section -->
        <div class="error-suggestions">
            <div class="suggestions-title">
                <i class="fas fa-lightbulb"></i>
                What you can try:
            </div>
            <ul class="suggestions-list">
                <li>Try refreshing the page to see if the issue resolves</li>
                <li>Clear your browser cache and cookies</li>
                <li>Check your internet connection</li>
                <li>Return to the home page and try again</li>
            </ul>
        </div>

        <!-- Navigation Actions -->
        <div class="error-actions">
            <a href="/" class="error-btn error-btn-primary">
                <i class="fas fa-home"></i>
                Go Home
            </a>
            <a href="/dashboard" class="error-btn error-btn-secondary">
                <i class="fas fa-tachometer-alt"></i>
                Dashboard
            </a>
            <a href="javascript:history.back()" class="error-btn error-btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Go Back
            </a>
        </div>
    </div>
</div>

<%- include('partials/modern-footer', {
    additionalScripts: []
}) %>
