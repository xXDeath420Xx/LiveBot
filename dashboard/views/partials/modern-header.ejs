<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="CertiFried MultiTool - Professional Discord bot with live streaming notifications, moderation, and more">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' | CertiFried MultiTool' : 'CertiFried MultiTool' %></title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/CertiFried.png">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Inter Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Modern Framework CSS -->
    <link rel="stylesheet" href="/css/modern-framework.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="/css/unified-dark-theme.css">
    <link rel="stylesheet" href="/css/unified-light-theme.css">
    <link rel="stylesheet" href="/css/unified-components.css">

    <!-- Text Readability Enhancement -->
    <link rel="stylesheet" href="/css/text-readability.css">

    <!-- Dashboard Polish & Cleanup -->
    <link rel="stylesheet" href="/css/dashboard-polish.css">

    <!-- Page-specific CSS -->
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(css => { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>

    <!-- Theme Initialization (prevent flash) -->
    <script>
        (function() {
            const theme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-theme', theme);
        })();
    </script>
</head>
<body data-theme="dark">
