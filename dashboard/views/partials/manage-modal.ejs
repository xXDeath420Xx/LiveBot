<!-- Modal for Editing Streamer Settings -->
<div class="modal fade" id="streamerSettingsModal" tabindex="-1" aria-labelledby="streamerSettingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark-2 text-white">
            <form action="/manage/<%= guild.id %>/edit-subscription" method="POST" enctype="multipart/form-data">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="streamerSettingsModalLabel">Edit Settings for <span id="modal-streamer-name"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="subscription_id" id="edit-subscription-id">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="edit-discord-user-id" class="form-label">Linked Discord User ID</label>
                            <input type="text" class="form-control bg-dark-3 text-white" id="edit-discord-user-id" name="discord_user_id" placeholder="Optional - For Live Role">
                        </div>
                        <!-- ** NEW FIELD ADDED HERE ** -->
                        <div class="col-md-6 mb-3">
                            <label for="edit-kick-username" class="form-label">Linked Kick Username</label>
                            <input type="text" class="form-control bg-dark-3 text-white" id="edit-kick-username" name="kick_username" placeholder="Optional - if different from Twitch">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="edit-channel-override" class="form-label">Announce In Channel</label>
                        <select id="edit-channel-override" name="announcement_channel_id" class="form-select bg-dark-3 text-white">
                            <option value="">-- Use Server Default --</option>
                            <% channels.forEach(channel => { %>
                                <option value="<%= channel.id %>">#<%= channel.name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="edit-override-nickname" class="form-label">Custom Webhook Nickname</label>
                        <input type="text" class="form-control bg-dark-3 text-white" id="edit-override-nickname" name="override_nickname" placeholder="Leave blank to use default">
                    </div>

                    <div class="mb-3">
                        <label for="edit-custom-message" class="form-label">Custom Announcement Message</label>
                        <textarea class="form-control bg-dark-3 text-white" id="edit-custom-message" name="custom_message" rows="3" placeholder="Placeholders: {username}, {url}, {platform}, {title}, {game}"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                             <label for="edit-avatar-file" class="form-label">Upload New Avatar</label>
                             <input class="form-control bg-dark-3 text-white" type="file" id="edit-avatar-file" name="avatar" accept="image/*">
                        </div>
                         <div class="col-md-6 mb-3">
                             <label for="edit-avatar-url" class="form-label">Or Use Avatar URL</label>
                            <input type="text" class="form-control bg-dark-3 text-white" id="edit-avatar-url" name="override_avatar_url_text" placeholder='Type "reset" to clear'>
                        </div>
                    </div>
                     <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="reset_avatar" value="true" id="reset-avatar-check">
                        <label class="form-check-label" for="reset-avatar-check">
                           Reset Avatar (removes custom avatar)
                        </label>
                    </div>

                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>