<div class="page-section">
    <div class="page-section-header">
        <div>
            <div class="page-section-title">
                <i class="fas fa-cog"></i>
                <span>Server Utilities</span>
            </div>
            <div class="page-section-subtitle">
                Configure auto-publisher, autoroles, and temporary voice channels
            </div>
        </div>
    </div>

    <!-- Auto Publisher Section -->
    <div style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400); border-radius: var(--radius-lg); padding: var(--spacing-6); margin-bottom: var(--spacing-6);">
        <div style="display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-4);">
            <div style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600)); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                <i class="fas fa-megaphone" style="color: white; font-size: 1.25rem;"></i>
            </div>
            <div>
                <h4 style="margin: 0; font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-text-primary);">Auto Publisher</h4>
                <p style="margin: 0; font-size: var(--font-size-sm); color: var(--color-text-muted);">Automatically publish messages in announcement channels</p>
            </div>
        </div>

        <form action="/manage/<%= guild.id %>/update-autopublisher" method="POST">
            <div style="margin-bottom: var(--spacing-4);">
                <div class="form-check form-switch" style="display: flex; align-items: center; gap: var(--spacing-3); padding: var(--spacing-3); background: var(--color-dark-700); border-radius: var(--radius-md);">
                    <input class="form-check-input" type="checkbox" role="switch" id="autoPublisherEnabled" name="is_enabled" <%= autoPublisher && autoPublisher.is_enabled ? 'checked' : '' %> style="width: 48px; height: 24px; cursor: pointer;">
                    <label class="form-check-label" for="autoPublisherEnabled" style="font-size: var(--font-size-sm); color: var(--color-text-secondary); cursor: pointer; margin: 0;">
                        <span style="font-weight: var(--font-weight-semibold); color: var(--color-text-primary);">Enable Auto Publisher</span><br>
                        <span style="font-size: var(--font-size-xs);">Automatically cross-post all messages from announcement channels</span>
                    </label>
                </div>
            </div>

            <% if (autoPublisher && autoPublisher.is_enabled) { %>
                <div style="background: var(--color-success); background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.05)); border: 1px solid rgba(34, 197, 94, 0.3); border-radius: var(--radius-md); padding: var(--spacing-3); margin-bottom: var(--spacing-4);">
                    <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                        <i class="fas fa-check-circle" style="color: var(--color-success);"></i>
                        <span style="font-size: var(--font-size-sm); color: var(--color-text-primary);">Auto Publisher is active - messages will be published automatically</span>
                    </div>
                </div>
            <% } %>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                <span>Save Auto Publisher Settings</span>
            </button>
        </form>
    </div>

    <!-- Autoroles Section -->
    <div style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400); border-radius: var(--radius-lg); padding: var(--spacing-6); margin-bottom: var(--spacing-6);">
        <div style="display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-4);">
            <div style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--color-accent-purple), var(--color-accent-blue)); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                <i class="fas fa-user-tag" style="color: white; font-size: 1.25rem;"></i>
            </div>
            <div>
                <h4 style="margin: 0; font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-text-primary);">Autoroles</h4>
                <p style="margin: 0; font-size: var(--font-size-sm); color: var(--color-text-muted);">Automatically assign roles when members join your server</p>
            </div>
        </div>

        <form action="/manage/<%= guild.id %>/update-autoroles" method="POST">
            <div style="margin-bottom: var(--spacing-4);">
                <div class="form-check form-switch" style="display: flex; align-items: center; gap: var(--spacing-3); padding: var(--spacing-3); background: var(--color-dark-700); border-radius: var(--radius-md);">
                    <input class="form-check-input" type="checkbox" role="switch" id="autorolesEnabled" name="is_enabled" <%= autoroles && autoroles.is_enabled ? 'checked' : '' %> style="width: 48px; height: 24px; cursor: pointer;">
                    <label class="form-check-label" for="autorolesEnabled" style="font-size: var(--font-size-sm); color: var(--color-text-secondary); cursor: pointer; margin: 0;">
                        <span style="font-weight: var(--font-weight-semibold); color: var(--color-text-primary);">Enable Autoroles</span><br>
                        <span style="font-size: var(--font-size-xs);">New members will automatically receive the selected role</span>
                    </label>
                </div>
            </div>

            <div style="margin-bottom: var(--spacing-4);">
                <label class="form-label">Role to Assign</label>
                <select class="form-select" id="autoroleRole" name="roles_to_assign">
                    <option value="">Select a role</option>
                    <% roles.forEach(role => { %>
                        <option value="<%= role.id %>" <%= autoroles && autoroles.roles_to_assign && JSON.parse(autoroles.roles_to_assign).includes(role.id) ? 'selected' : '' %>><%= role.name %></option>
                    <% }) %>
                </select>
                <div class="form-help">This role will be assigned to all new members when they join</div>
            </div>

            <% if (autoroles && autoroles.is_enabled && autoroles.roles_to_assign) { %>
                <% const selectedRoles = JSON.parse(autoroles.roles_to_assign); %>
                <% const roleObj = roles.find(r => r.id === selectedRoles[0]); %>
                <% if (roleObj) { %>
                    <div style="background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(139, 92, 246, 0.05)); border: 1px solid rgba(139, 92, 246, 0.3); border-radius: var(--radius-md); padding: var(--spacing-3); margin-bottom: var(--spacing-4);">
                        <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                            <i class="fas fa-info-circle" style="color: var(--color-accent-purple);"></i>
                            <span style="font-size: var(--font-size-sm); color: var(--color-text-primary);">
                                New members will receive the <strong><%= roleObj.name %></strong> role
                            </span>
                        </div>
                    </div>
                <% } %>
            <% } %>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                <span>Save Autorole Settings</span>
            </button>
        </form>
    </div>

    <!-- Temporary Channels Section -->
    <div style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400); border-radius: var(--radius-lg); padding: var(--spacing-6);">
        <div style="display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-4);">
            <div style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--color-accent-blue), var(--color-primary-500)); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                <i class="fas fa-volume-up" style="color: white; font-size: 1.25rem;"></i>
            </div>
            <div>
                <h4 style="margin: 0; font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-text-primary);">Temporary Voice Channels</h4>
                <p style="margin: 0; font-size: var(--font-size-sm); color: var(--color-text-muted);">Create temporary voice channels that delete when empty</p>
            </div>
        </div>

        <form action="/manage/<%= guild.id %>/update-tempchannels" method="POST">
            <div class="grid grid-cols-2" style="gap: var(--spacing-4); margin-bottom: var(--spacing-4);">
                <div>
                    <label class="form-label">Creator Channel</label>
                    <select class="form-select" id="tempChannelCreator" name="creator_channel_id">
                        <option value="">Select a voice channel</option>
                        <% voiceChannels.forEach(channel => { %>
                            <option value="<%= channel.id %>" <%= tempChannels && tempChannels.creator_channel_id === channel.id ? 'selected' : '' %>>
                                <i class="fas fa-volume-up"></i> <%= channel.name %>
                            </option>
                        <% }) %>
                    </select>
                    <div class="form-help">Users join this channel to create their own temporary channel</div>
                </div>

                <div>
                    <label class="form-label">Channel Category</label>
                    <select class="form-select" id="tempChannelCategory" name="category_id">
                        <option value="">Select a category</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>" <%= tempChannels && tempChannels.category_id === category.id ? 'selected' : '' %>><%= category.name %></option>
                        <% }) %>
                    </select>
                    <div class="form-help">New temporary channels will be created in this category</div>
                </div>
            </div>

            <div style="margin-bottom: var(--spacing-4);">
                <label class="form-label">Channel Name Format</label>
                <input type="text" class="form-control" id="tempChannelName" name="naming_template" value="<%= tempChannels ? tempChannels.naming_template : '{username}\'s Channel' %>" placeholder="{username}'s Channel">
                <div class="form-help">Use <code style="background: var(--color-dark-700); padding: 2px 6px; border-radius: 3px;">{username}</code> as a placeholder for the user's name</div>
            </div>

            <% if (tempChannels && tempChannels.creator_channel_id) { %>
                <div style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(59, 130, 246, 0.05)); border: 1px solid rgba(59, 130, 246, 0.3); border-radius: var(--radius-md); padding: var(--spacing-4); margin-bottom: var(--spacing-4);">
                    <div style="display: flex; gap: var(--spacing-3);">
                        <i class="fas fa-lightbulb" style="color: var(--color-accent-blue); margin-top: 2px;"></i>
                        <div style="font-size: var(--font-size-sm); color: var(--color-text-primary);">
                            <strong>How it works:</strong><br>
                            <span style="color: var(--color-text-secondary);">
                                1. User joins the creator channel<br>
                                2. Bot creates a new temporary channel with custom name<br>
                                3. User is moved to their new channel<br>
                                4. Channel is deleted when empty
                            </span>
                        </div>
                    </div>
                </div>
            <% } %>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                <span>Save Temp Channel Settings</span>
            </button>
        </form>
    </div>
</div>

<style>
.form-label {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.form-help {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--spacing-2);
}

.form-check-input:checked {
    background-color: var(--color-primary-500);
    border-color: var(--color-primary-500);
}
</style>
