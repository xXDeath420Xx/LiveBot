<div class="row">
    <div class="col-12">
        <h3>Backups</h3>
        <p class="text-muted">Create and manage backups of your server's configuration (roles, channels, etc.).</p>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Create New Backup</h4>
        <p class="card-subtitle mb-3 text-muted">Create a snapshot of your server's current state.</p>
        <form action="/manage/<%= guild.id %>/create-backup" method="POST" class="row g-3 align-items-end">
            <div class="col-md-9">
                <label class="form-label">Snapshot Name</label>
                <input type="text" name="snapshot_name" class="form-control" required placeholder="e.g., Pre-raid setup">
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-save me-2"></i>Create Backup</button>
            </div>
        </form>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Existing Backups</h4>
        <p class="card-subtitle mb-3 text-muted">Manage your previously created server backups.</p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Snapshot Name</th>
                    <th>Created At</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% if (backups && backups.length > 0) { %>
                    <% backups.forEach(backup => { %>
                        <tr>
                            <td><%= backup.snapshot_name %></td>
                            <td><%= new Date(backup.created_at).toLocaleString() %></td>
                            <td class="text-end">
                                <form action="/manage/<%= guild.id %>/restore-backup" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to restore this backup? This will overwrite current server settings!');">
                                    <input type="hidden" name="backupId" value="<%= backup.id %>">
                                    <button type="submit" class="btn btn-sm btn-success">Restore</button>
                                </form>
                                <form action="/manage/<%= guild.id %>/delete-backup" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this backup? This action cannot be undone.');">
                                    <input type="hidden" name="backupId" value="<%= backup.id %>">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="text-center">No backups have been created for this server.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>