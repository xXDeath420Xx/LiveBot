<div class="page-section">
    <div class="page-section-header">
        <div>
            <div class="page-section-title">
                <i class="fas fa-database"></i>
                <span>Server Backups</span>
            </div>
            <div class="page-section-subtitle">
                Create and manage snapshots of your server configuration
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <% if (backups && backups.length > 0) { %>
        <div class="grid grid-cols-3" style="margin-bottom: var(--spacing-6);">
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Total Backups</div>
                <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-text-primary);"><%= backups.length %></div>
            </div>
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Latest Backup</div>
                <% const latest = backups.sort((a, b) => new Date(b.created_at) - new Date(a.created_at))[0]; %>
                <div style="font-size: var(--font-size-sm); font-weight: var(--font-weight-semibold); color: var(--color-primary-400); margin-top: var(--spacing-1);">
                    <%= new Date(latest.created_at).toLocaleDateString() %>
                </div>
            </div>
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Status</div>
                <div style="font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-success); margin-top: var(--spacing-1);">
                    <i class="fas fa-shield-alt"></i> Protected
                </div>
            </div>
        </div>
    <% } %>

    <!-- Create Backup Card -->
    <div style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400); border-radius: var(--radius-lg); padding: var(--spacing-6); margin-bottom: var(--spacing-6);">
        <div style="display: flex; align-items: center; gap: var(--spacing-3); margin-bottom: var(--spacing-4);">
            <div style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600)); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                <i class="fas fa-plus" style="color: white; font-size: 1.25rem;"></i>
            </div>
            <div>
                <h4 style="margin: 0; font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-text-primary);">Create New Backup</h4>
                <p style="margin: 0; font-size: var(--font-size-sm); color: var(--color-text-muted);">Create a snapshot of your server's current configuration</p>
            </div>
        </div>

        <form action="/manage/<%= guild.id %>/create-backup" method="POST">
            <div class="grid grid-cols-3" style="gap: var(--spacing-4); margin-bottom: var(--spacing-4);">
                <div style="grid-column: span 2;">
                    <label class="form-label">Snapshot Name</label>
                    <input type="text" name="snapshot_name" class="form-control" required placeholder="e.g., Pre-raid setup, Before event, Initial config">
                    <div class="form-help">Choose a descriptive name to easily identify this backup later</div>
                </div>

                <div style="display: flex; align-items: flex-end;">
                    <button type="submit" class="btn btn-primary" style="width: 100%;">
                        <i class="fas fa-save"></i>
                        <span>Create Backup</span>
                    </button>
                </div>
            </div>

            <div style="background: linear-gradient(135deg, rgba(88, 101, 242, 0.1), rgba(88, 101, 242, 0.05)); border: 1px solid rgba(88, 101, 242, 0.3); border-radius: var(--radius-md); padding: var(--spacing-3);">
                <div style="display: flex; gap: var(--spacing-3);">
                    <i class="fas fa-info-circle" style="color: var(--color-primary-400); margin-top: 2px;"></i>
                    <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary);">
                        Backups include: roles, channels, categories, permissions, and basic settings. Messages and user data are not included.
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Backups List -->
    <% if (backups && backups.length > 0) { %>
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Snapshot</th>
                        <th>Created</th>
                        <th>Age</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% backups.sort((a, b) => new Date(b.created_at) - new Date(a.created_at)).forEach(backup => {
                        const createdDate = new Date(backup.created_at);
                        const now = new Date();
                        const diffDays = Math.floor((now - createdDate) / (1000 * 60 * 60 * 24));
                        const ageText = diffDays === 0 ? 'Today' : diffDays === 1 ? '1 day ago' : `${diffDays} days ago`;
                    %>
                        <tr>
                            <td>
                                <div style="display: flex; align-items: center; gap: var(--spacing-3);">
                                    <div style="width: 40px; height: 40px; background: var(--color-dark-700); border: 2px solid var(--color-primary-500); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                        <i class="fas fa-archive" style="color: var(--color-primary-400);"></i>
                                    </div>
                                    <div>
                                        <div style="font-weight: var(--font-weight-semibold); color: var(--color-text-primary);"><%= backup.snapshot_name %></div>
                                        <div style="font-size: var(--font-size-xs); color: var(--color-text-muted);">ID: <%= backup.id %></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div style="color: var(--color-text-secondary); font-size: var(--font-size-sm);">
                                    <%= createdDate.toLocaleDateString() %><br>
                                    <span style="color: var(--color-text-muted); font-size: var(--font-size-xs);"><%= createdDate.toLocaleTimeString() %></span>
                                </div>
                            </td>
                            <td>
                                <span class="badge badge-secondary"><%= ageText %></span>
                            </td>
                            <td class="text-end">
                                <div style="display: flex; gap: var(--spacing-2); justify-content: flex-end;">
                                    <form action="/manage/<%= guild.id %>/restore-backup" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to restore this backup? This will overwrite current server settings!');">
                                        <input type="hidden" name="backupId" value="<%= backup.id %>">
                                        <button type="submit" class="btn btn-sm btn-secondary" title="Restore">
                                            <i class="fas fa-undo"></i>
                                            <span>Restore</span>
                                        </button>
                                    </form>
                                    <form action="/manage/<%= guild.id %>/delete-backup" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this backup? This action cannot be undone.');">
                                        <input type="hidden" name="backupId" value="<%= backup.id %>">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Warning Banner -->
        <div style="margin-top: var(--spacing-6); background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05)); border: 1px solid rgba(239, 68, 68, 0.3); border-radius: var(--radius-lg); padding: var(--spacing-4);">
            <div style="display: flex; gap: var(--spacing-3);">
                <i class="fas fa-exclamation-triangle" style="color: var(--color-danger); font-size: 1.25rem; margin-top: 2px;"></i>
                <div>
                    <div style="font-size: var(--font-size-sm); font-weight: var(--font-weight-semibold); color: var(--color-text-primary); margin-bottom: var(--spacing-2);">
                        Important: Restore with Caution
                    </div>
                    <div style="font-size: var(--font-size-sm); color: var(--color-text-secondary); line-height: 1.6;">
                        Restoring a backup will <strong style="color: var(--color-danger);">overwrite your current server configuration</strong>. This includes roles, channels, and permissions. This action cannot be undone. Consider creating a new backup of your current state before restoring.
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-database"></i>
            </div>
            <div class="empty-state-title">No Backups Created</div>
            <div class="empty-state-description">
                Create your first backup to protect your server configuration
            </div>
        </div>
    <% } %>
</div>

<style>
.table-container {
    overflow-x: auto;
    border: 1px solid var(--color-dark-400);
    border-radius: var(--radius-lg);
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

.data-table thead {
    background: var(--color-dark-600);
    border-bottom: 2px solid var(--color-dark-400);
}

.data-table th {
    padding: var(--spacing-4);
    text-align: left;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.data-table td {
    padding: var(--spacing-4);
    border-bottom: 1px solid var(--color-dark-400);
}

.data-table tbody tr {
    transition: background var(--transition-base);
}

.data-table tbody tr:hover {
    background: var(--color-dark-600);
}

.data-table tbody tr:last-child td {
    border-bottom: none;
}

.empty-state {
    text-align: center;
    padding: var(--spacing-12) var(--spacing-8);
}

.empty-state-icon {
    font-size: 4rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-4);
}

.empty-state-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.empty-state-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-6);
}

.form-label {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.form-help {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--spacing-2);
}
</style>