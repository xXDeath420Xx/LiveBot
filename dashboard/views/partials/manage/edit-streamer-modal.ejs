<div class="modal fade" id="edit-streamer-modal" tabindex="-1" aria-labelledby="editStreamerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="edit-streamer-form" method="POST"> 
                <div class="modal-header">
                    <h5 class="modal-title" id="editStreamerModalLabel">Edit Settings for <strong id="edit-streamer-name"></strong></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="consolidated_streamer_id" id="consolidated_streamer_id">

                    <div class="mb-3">
                        <label for="discord_user_id" class="form-label"><i class="fab fa-discord me-2"></i>Linked Discord User ID</label>
                        <input type="text" class="form-control" id="discord_user_id" name="discord_user_id" placeholder="Enter user's Discord ID to link accounts">
                        <div class="form-text">This allows the bot to assign the live role to the user when they go live.</div>
                    </div>

                    <hr class="my-4">

                    <h5><i class="fas fa-satellite-dish me-2"></i>Channel Subscriptions</h5>
                    <p class="text-muted">Manage announcement settings for each subscribed channel.</p>
                    <div id="subscriptions-container">
                        <!-- Subscription settings will be injected here by JavaScript -->
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                    <form id="delete-streamer-form" method="POST" class="d-inline">
                        <input type="hidden" name="streamerId" id="delete-streamer-id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove ALL subscriptions for this streamer from this server?');"><i class="fas fa-trash-alt me-2"></i>Remove All Subscriptions</button>
                    </form>
                    <div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>