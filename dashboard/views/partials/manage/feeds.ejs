<div class="row">
    <div class="col-12">
        <h3>Feeds</h3>
        <p class="text-muted">Automatically post content from Reddit, YouTube, and Twitter to your channels.</p>
    </div>
</div>

<!-- Reddit Feeds -->
<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Reddit Feeds</h4>
        <p class="card-subtitle mb-3 text-muted">Post new content from your favorite subreddits.</p>
        <form action="/manage/<%= guild.id %>/add-reddit-feed" method="POST" class="row g-3 mb-4 align-items-end">
            <div class="col-md-5">
                <label class="form-label">Subreddit</label>
                <input type="text" name="subreddit" class="form-control" required placeholder="e.g., buildapcsales">
            </div>
            <div class="col-md-5">
                <label class="form-label">Channel</label>
                <select name="channel_id" class="form-select" required>
                    <% channels.forEach(channel => { %>
                        <option value="<%= channel.id %>">#<%= channel.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus me-2"></i>Add</button>
            </div>
        </form>

        <h5 class="mt-4">Existing Reddit Feeds</h5>
        <table class="table table-hover">
            <tbody>
                <% if (redditFeeds && redditFeeds.length > 0) { %>
                    <% redditFeeds.forEach(feed => { %>
                        <tr>
                            <td>r/<%= feed.subreddit %> &rarr; #<%= channels.find(c => c.id === feed.channel_id) ? channels.find(c => c.id === feed.channel_id).name : 'Unknown' %></td>
                            <td class="text-end">
                                <form action="/manage/<%= guild.id %>/remove-reddit-feed" method="POST" class="d-inline">
                                    <input type="hidden" name="feedId" value="<%= feed.id %>">
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td class="text-center text-muted">No Reddit feeds configured.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

