<div class="plugin-card mt-4">
    <div class="plugin-card-header">
        <h4><i class="fas fa-user-lock me-2"></i> Quarantine System</h4>
    </div>
    <div class="plugin-card-body">
        <form action="/manage/<%= guild.id %>/update-quarantine" method="POST">
            <p class="text-muted">Restrict users to a specific role with limited permissions when they are quarantined.</p>

            <div class="mb-3">
                <label for="quarantine-role" class="form-label">Quarantine Role</label>
                <select class="form-select" id="quarantine-role" name="quarantine_role_id">
                    <option value="">-- Select a Role --</option>
                    <% roles.forEach(role => { %>
                        <option value="<%= role.id %>" <%= (quarantineConfig && quarantineConfig.quarantine_role_id === role.id) ? 'selected' : '' %> >@<%= role.name %></option>
                    <% }); %>
                </select>
                <div class="form-text">Users will be assigned this role when quarantined. Ensure this role has very limited permissions.</div>
            </div>

            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" role="switch" id="quarantine-enabled" name="is_enabled" <%= (quarantineConfig && quarantineConfig.is_enabled) ? 'checked' : '' %>>
                <label class="form-check-label" for="quarantine-enabled">Enable Quarantine System</label>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Save Quarantine Settings</button>
            </div>
        </form>
    </div>
</div>
