<%
const syncs = twitchScheduleSyncs || [];
const twitchStreamers = consolidatedStreamers ? consolidatedStreamers.filter(s => s.platforms?.includes('twitch')) : [];
%>

<div class="page-section">
    <div class="page-section-header">
        <div>
            <div class="page-section-title">
                <i class="fab fa-twitch"></i>
                <span>Twitch Schedules</span>
            </div>
            <div class="page-section-subtitle">
                Automatically sync and display streamer Twitch schedules
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-4" style="margin-bottom: var(--spacing-6);">
        <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
            <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Active Syncs</div>
            <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-text-primary);"><%= syncs.length %></div>
        </div>
        <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
            <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Twitch Streamers</div>
            <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: #9146FF;"><%= twitchStreamers.length %></div>
        </div>
        <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
            <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Channels Used</div>
            <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-primary-400);"><%= new Set(syncs.map(s => s.channel_id)).size %></div>
        </div>
        <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
            <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Auto-Update</div>
            <div style="font-size: var(--font-size-xl); font-weight: var(--font-weight-bold); color: var(--color-success);">
                <i class="fas fa-check-circle"></i> Enabled
            </div>
        </div>
    </div>

    <!-- Add Schedule Sync -->
    <div style="background: var(--color-dark-600); padding: var(--spacing-6); border-radius: var(--radius-lg); border: 1px solid var(--color-dark-400); margin-bottom: var(--spacing-6);">
        <h3 style="font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-text-primary); margin: 0 0 var(--spacing-2) 0;">
            <i class="fas fa-calendar-plus" style="color: var(--color-primary-400);"></i>
            Add Schedule Sync
        </h3>
        <p style="color: var(--color-text-secondary); margin-bottom: var(--spacing-5);">
            Sync a Twitch streamer's schedule to automatically post updates
        </p>
        <form action="/manage/<%= guild.id %>/twitch-schedules/sync" method="POST">
            <div class="grid grid-cols-3" style="gap: var(--spacing-3); align-items: end;">
                <div>
                    <label class="form-label">Twitch Streamer</label>
                    <select class="form-select" name="streamerId" required>
                        <option value="">Select streamer</option>
                        <% twitchStreamers.forEach(streamer => { %>
                            <option value="<%= streamer.id %>"><%= streamer.name %></option>
                        <% }) %>
                    </select>
                    <div class="form-help">Must be a Twitch streamer</div>
                </div>
                <div>
                    <label class="form-label">Post Schedule In</label>
                    <select class="form-select" name="channelId" required>
                        <option value="">Select channel</option>
                        <% channels.forEach(channel => { %>
                            <option value="<%= channel.id %>">#<%= channel.name %></option>
                        <% }) %>
                    </select>
                    <div class="form-help">Where to post updates</div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" style="width: 100%;">
                        <i class="fas fa-save"></i>
                        <span>Create Sync</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Existing Syncs -->
    <div style="background: var(--color-dark-600); padding: var(--spacing-6); border-radius: var(--radius-lg); border: 1px solid var(--color-dark-400);">
        <h3 style="font-size: var(--font-size-lg); font-weight: var(--font-weight-bold); color: var(--color-text-primary); margin: 0 0 var(--spacing-2) 0;">
            <i class="fas fa-calendar-check" style="color: var(--color-primary-400);"></i>
            Active Schedule Syncs
        </h3>
        <p style="color: var(--color-text-secondary); margin-bottom: var(--spacing-5);">
            Manage your configured schedule synchronizations
        </p>

        <% if (syncs.length > 0) { %>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th style="width: 40%;">Streamer</th>
                            <th style="width: 40%;">Channel</th>
                            <th style="width: 20%;" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% syncs.forEach(sync => { %>
                            <% const streamer = consolidatedStreamers?.find(s => s.id === sync.streamer_id); %>
                            <% const channel = channels.find(c => c.id === sync.channel_id); %>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                                        <i class="fab fa-twitch" style="color: #9146FF; font-size: var(--font-size-lg);"></i>
                                        <span style="font-weight: var(--font-weight-medium); color: var(--color-text-primary);">
                                            <%= streamer ? streamer.name : 'Unknown Streamer' %>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                                        <i class="fas fa-hashtag" style="color: var(--color-text-muted); font-size: var(--font-size-sm);"></i>
                                        <span style="color: var(--color-text-secondary);">
                                            <%= channel ? channel.name : 'Unknown Channel' %>
                                        </span>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <form action="/manage/<%= guild.id %>/twitch-schedules/delete" method="POST" style="display: inline;">
                                        <input type="hidden" name="syncId" value="<%= sync.id %>">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Remove this schedule sync?');">
                                            <i class="fas fa-trash"></i>
                                            <span>Remove</span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fab fa-twitch"></i>
                </div>
                <div class="empty-state-title">No Schedule Syncs</div>
                <div class="empty-state-description">
                    Create a schedule sync to automatically post Twitch stream schedules
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
.table-container {
    overflow-x: auto;
    border: 1px solid var(--color-dark-400);
    border-radius: var(--radius-lg);
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

.data-table thead {
    background: var(--color-dark-700);
    border-bottom: 2px solid var(--color-dark-400);
}

.data-table th {
    padding: var(--spacing-4);
    text-align: left;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.data-table td {
    padding: var(--spacing-4);
    border-bottom: 1px solid var(--color-dark-400);
}

.data-table tbody tr {
    transition: background var(--transition-base);
}

.data-table tbody tr:hover {
    background: var(--color-dark-700);
}

.data-table tbody tr:last-child td {
    border-bottom: none;
}

.text-end {
    text-align: right;
}

.empty-state {
    text-align: center;
    padding: var(--spacing-12) var(--spacing-8);
}

.empty-state-icon {
    font-size: 4rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-4);
}

.empty-state-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.empty-state-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-6);
}
</style>