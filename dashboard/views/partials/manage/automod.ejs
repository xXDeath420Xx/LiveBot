<div class="row">
    <div class="col-12">
        <h3>AutoMod</h3>
        <p class="text-muted">Set up rules to automatically moderate your server's content.</p>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Add New Rule</h4>
        <p class="card-subtitle mb-3 text-muted">Create a new rule for the AutoMod system.</p>
        <form action="/manage/<%= guild.id %>/add-automod-rule" method="POST">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filter Type</label>
                    <select name="filter_type" id="filter-type-select" class="form-select" required>
                        <option value="bannedWords">Banned Words</option>
                        <option value="massMention">Mass Mention</option>
                        <option value="allCaps">All Caps</option>
                        <option value="antiSpam">Anti-Spam</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Action</label>
                    <select name="action" id="action-select" class="form-select" required>
                        <option value="delete">Delete Message</option>
                        <option value="warn">Warn Member</option>
                        <option value="mute">Mute Member</option>
                    </select>
                </div>
                <div class="col-md-4" id="mute-duration-container" style="display: none;">
                    <label class="form-label">Mute Duration (minutes)</label>
                    <input type="number" name="action_duration_minutes" class="form-control" min="1">
                </div>
            </div>

            <div id="config-container" class="mt-3">
                <!-- Banned Words Config -->
                <div id="bannedWords-config">
                    <label class="form-label">Banned Words (comma-separated)</label>
                    <textarea name="config_banned_words" class="form-control" rows="3"></textarea>
                </div>

                <!-- Mass Mention Config -->
                <div id="massMention-config" style="display: none;">
                    <label class="form-label">Mention Limit</label>
                    <input type="number" name="config_massMention_limit" class="form-control" value="5" min="1">
                </div>

                <!-- All Caps Config -->
                <div id="allCaps-config" style="display: none;">
                    <label class="form-label">Capitalization Percentage Limit (%)</label>
                    <input type="number" name="config_allCaps_limit" class="form-control" value="70" min="1" max="100">
                </div>

                <!-- Anti-Spam Config -->
                <div id="antiSpam-config" style="display: none;" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Message Limit</label>
                        <input type="number" name="config_antiSpam_message_limit" class="form-control" value="5" min="2">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Time Period (seconds)</label>
                        <input type="number" name="config_antiSpam_time_period" class="form-control" value="10" min="1">
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Add Rule</button>
        </form>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Existing Rules</h4>
        <p class="card-subtitle mb-3 text-muted">Manage current automod rules.</p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Filter Type</th>
                    <th>Config</th>
                    <th>Action</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% if (automodRules && automodRules.length > 0) { %>
                    <% automodRules.forEach(rule => { %>
                        <tr>
                            <td><span class="badge bg-secondary"><%= rule.filter_type %></span></td>
                            <td><pre class="mb-0"><code><%= JSON.stringify(JSON.parse(rule.config), null, 2) %></code></pre></td>
                            <td><span class="badge bg-info"><%= rule.action %></span></td>
                            <td>
                                <form action="/manage/<%= guild.id %>/delete-automod-rule" method="POST" class="d-inline">
                                    <input type="hidden" name="ruleId" value="<%= rule.id %>">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No Automod rules configured.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const filterTypeSelect = document.getElementById('filter-type-select');
        const actionSelect = document.getElementById('action-select');
        const muteDurationContainer = document.getElementById('mute-duration-container');
        
        const configContainers = {
            bannedWords: document.getElementById('bannedWords-config'),
            massMention: document.getElementById('massMention-config'),
            allCaps: document.getElementById('allCaps-config'),
            antiSpam: document.getElementById('antiSpam-config')
        };

        function toggleConfig() {
            const selectedType = filterTypeSelect.value;
            Object.values(configContainers).forEach(c => c.style.display = 'none');
            if (configContainers[selectedType]) {
                configContainers[selectedType].style.display = 'block';
                 if (selectedType === 'antiSpam') configContainers[selectedType].style.display = 'flex';
            }
        }

        function toggleMuteDuration() {
            muteDurationContainer.style.display = actionSelect.value === 'mute' ? 'block' : 'none';
        }

        filterTypeSelect.addEventListener('change', toggleConfig);
        actionSelect.addEventListener('change', toggleMuteDuration);

        // Initial setup
        toggleConfig();
        toggleMuteDuration();
    });
</script>