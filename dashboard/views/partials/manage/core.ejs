<form id="core-settings-form">
    <h4><i class="fas fa-cogs me-2"></i>Core Settings</h4>
    <p class="text-muted">Configure the basic settings for the bot in this server.</p>
    <hr class="my-4">

    <div class="mb-3">
        <label for="timezone" class="form-label">Timezone</label>
        <select class="form-select" id="timezone" name="timezone">
            <% const timezones = ["UTC-12", "UTC-11", "UTC-10", "UTC-9", "UTC-8", "UTC-7", "UTC-6", "UTC-5", "UTC-4", "UTC-3", "UTC-2", "UTC-1", "UTC+0", "UTC+1", "UTC+2", "UTC+3", "UTC+4", "UTC+5", "UTC+6", "UTC+7", "UTC+8", "UTC+9", "UTC+10", "UTC+11", "UTC+12"]; %>
            <% timezones.forEach(tz => { %>
                <option value="<%= tz %>" <%= (settings && settings.timezone === tz) ? 'selected' : '' %>><%= tz %></option>
            <% }); %>
        </select>
        <div class="form-text">Select the timezone for your server to ensure scheduled announcements are accurate.</div>
    </div>

    <div class="mb-3">
        <label for="live-role" class="form-label">Live Role</label>
        <select class="form-select" id="live-role" name="live_role_id">
            <option value="">None</option>
            <% guild.roles.cache.sort((a, b) => b.position - a.position).forEach(role => { %>
                <option value="<%= role.id %>" <%= (settings && settings.live_role_id === role.id) ? 'selected' : '' %>>@<%= role.name %></option>
            <% }); %>
        </select>
        <div class="form-text">This role will be given to members when they go live.</div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Changes</button>
    </div>
</form>