<div class="content-card">
    <h4><i class="fas fa-users-cog me-2"></i> Twitch Team Subscriptions</h4>
    <p class="text-muted">Automatically announce for all members of a Twitch Team.</p>

    <table class="table">
        <thead>
            <tr>
                <th>Twitch Team Name</th>
                <th>Announcement Channel</th>
                <th>Live Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% teamSubscriptions.forEach(team => { %>
                <tr>
                    <td><%= team.team_name %></td>
                    <td>#<%= team.announcement_channel_name %></td>
                    <td>@<%= team.live_role_name %></td>
                    <td>
                        <form action="/manage/<%= guild.id %>/unsubscribe-team" method="POST" class="d-inline">
                            <input type="hidden" name="teamId" value="<%= team.id %>">
                            <button type="submit" class="btn btn-sm btn-danger">Unsubscribe</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <hr class="my-4">

    <h5>Subscribe to a New Team</h5>
    <form action="/manage/<%= guild.id %>/subscribe-team" method="POST">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Twitch Team Name (URL Slug)</label>
                <input type="text" class="form-control" name="team_name" placeholder="e.g., 'OTK'" required>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Announcement Channel</label>
                <select class="form-select" name="announcement_channel_id" required>
                    <% channels.forEach(channel => { %>
                        <option value="<%= channel.id %>">#<%= channel.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Live Role (Optional)</label>
                <select class="form-select" name="live_role_id">
                    <option value="">None</option>
                    <% roles.forEach(role => { %>
                        <option value="<%= role.id %>">@<%= role.name %></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Subscribe</button>
    </form>
</div>