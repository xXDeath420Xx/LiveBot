<div class="row">
    <div class="col-12">
        <h3>Polls</h3>
        <p class="text-muted">Create and manage polls to get feedback from your community.</p>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Create a New Poll</h4>
        <p class="card-subtitle mb-3 text-muted">Set up a new poll for your members to vote on.</p>
        <form action="/manage/<%= guild.id %>/create-poll" method="POST">
            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label">Question</label>
                    <input type="text" name="question" class="form-control" required>
                </div>
                <div class="col-12">
                    <label class="form-label">Options (comma-separated)</label>
                    <input type="text" name="options" class="form-control" required placeholder="Option 1, Option 2, Option 3">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Duration (minutes)</label>
                    <input type="number" name="duration_minutes" class="form-control" value="60" min="1" required>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Channel</label>
                    <select name="channel_id" class="form-select" required>
                        <% channels.forEach(channel => { %>
                            <option value="<%= channel.id %>">#<%= channel.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-play me-2"></i>Start Poll</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Active & Recent Polls</h4>
        <p class="card-subtitle mb-3 text-muted">View and manage ongoing and past polls.</p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Channel</th>
                        <th>Ends At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (polls && polls.length > 0) { %>
                        <% polls.forEach(poll => { %>
                            <tr>
                                <td><%= poll.question %></td>
                                <td>#<%= channels.find(c => c.id === poll.channel_id) ? channels.find(c => c.id === poll.channel_id).name : 'Unknown' %></td>
                                <td><%= new Date(poll.ends_at).toLocaleString() %></td>
                                <td>
                                    <% if (poll.is_active) { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Ended</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (poll.is_active) { %>
                                        <form action="/manage/<%= guild.id %>/end-poll" method="POST" class="d-inline">
                                            <input type="hidden" name="pollId" value="<%= poll.id %>">
                                            <button type="submit" class="btn btn-sm btn-warning">End Now</button>
                                        </form>
                                    <% } %>
                                    <form action="/manage/<%= guild.id %>/delete-poll" method="POST" class="d-inline">
                                        <input type="hidden" name="pollId" value="<%= poll.id %>">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No polls found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>