<div class="row">
    <div class="col-12">
        <h3>Starboard</h3>
        <p class="text-muted">Highlight the best messages in your server by adding them to a special channel.</p>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Starboard Settings</h4>
        <p class="card-subtitle mb-3 text-muted">Configure the channel and threshold for the starboard.</p>
        <form action="/manage/<%= guild.id %>/starboard/config" method="POST">
            <div class="mb-3">
                <label for="starboardEnabled" class="form-label">Enable Starboard</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="starboardEnabled" name="enabled" <%= starboardConfig && starboardConfig.enabled ? 'checked' : '' %>>
                    <label class="form-check-label" for="starboardEnabled">Enable</label>
                </div>
            </div>
            <div class="mb-3">
                <label for="starboardChannel" class="form-label">Starboard Channel</label>
                <select class="form-select" id="starboardChannel" name="channelId">
                    <option value="">Select a channel</option>
                    <% channels.forEach(channel => { %>
                        <option value="<%= channel.id %>" <%= starboardConfig && starboardConfig.channel_id === channel.id ? 'selected' : '' %> >#<%= channel.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="starboardThreshold" class="form-label">Star Threshold</label>
                <input type="number" class="form-control" id="starboardThreshold" name="threshold" value="<%= starboardConfig ? starboardConfig.threshold : '5' %>" min="1">
                <div class="form-text">The number of star reactions required to post a message to the starboard.</div>
            </div>
            <button type="submit" class="btn btn-primary">Save Starboard Settings</button>
        </form>
    </div>
</div>