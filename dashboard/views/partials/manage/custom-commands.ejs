<div class="row">
    <div class="col-12">
        <h3>Custom Commands</h3>
        <p class="text-muted">Create your own commands for the bot to respond to.</p>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Create New Command</h4>
        <p class="card-subtitle mb-3 text-muted">Create a simple text-based command. The command name should not contain spaces.</p>
        <form action="/manage/<%= guild.id %>/add-custom-command" method="POST">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Command Name</label>
                    <div class="input-group">
                        <span class="input-group-text">!</span>
                        <input type="text" name="command_name" class="form-control" required pattern="^\S+$">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Response</label>
                    <textarea name="response" class="form-control" required rows="1"></textarea>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus me-2"></i>Create Command</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="content-card mt-4">
    <div class="card-body">
        <h4 class="card-title">Existing Commands</h4>
        <p class="card-subtitle mb-3 text-muted">Manage your server's custom commands.</p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Command Name</th>
                    <th>Response</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% if (commands && commands.length > 0) { %>
                    <% commands.forEach(command => { %>
                        <tr>
                            <td>!<%= command.command_name %></td>
                            <td class="text-truncate" style="max-width: 400px;"><%= command.response %></td>
                            <td>
                                <form action="/manage/<%= guild.id %>/remove-custom-command" method="POST" class="d-inline">
                                    <input type="hidden" name="command_name" value="<%= command.command_name %>">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="text-center">You haven't created any custom commands yet.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>