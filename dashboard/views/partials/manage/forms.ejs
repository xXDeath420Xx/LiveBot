<div class="page-section">
    <div class="page-section-header">
        <div>
            <div class="page-section-title">
                <i class="fas fa-file-alt"></i>
                <span>Forms Management</span>
            </div>
            <div class="page-section-subtitle">
                Create custom forms with questions and collect user responses
            </div>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create-form-modal">
            <i class="fas fa-plus"></i>
            <span>Create Form</span>
        </button>
    </div>

    <!-- Stats Overview -->
    <% if (forms && forms.length > 0) { %>
        <div class="grid grid-cols-4" style="margin-bottom: var(--spacing-6);">
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Total Forms</div>
                <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-text-primary);"><%= forms.length %></div>
            </div>
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Total Questions</div>
                <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-primary-400);"><%= forms.reduce((sum, f) => sum + (f.question_count || 0), 0) %></div>
            </div>
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Total Responses</div>
                <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-success);"><%= forms.reduce((sum, f) => sum + (f.submission_count || 0), 0) %></div>
            </div>
            <div style="background: var(--color-dark-600); padding: var(--spacing-4); border-radius: var(--radius-md); border: 1px solid var(--color-dark-400);">
                <div style="font-size: var(--font-size-xs); color: var(--color-text-muted); margin-bottom: var(--spacing-1);">Active Forms</div>
                <div style="font-size: var(--font-size-2xl); font-weight: var(--font-weight-bold); color: var(--color-accent-purple);"><%= forms.length %></div>
            </div>
        </div>
    <% } %>

    <!-- Alerts -->
    <% if (locals.success) { %>
        <div style="background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.05)); border: 1px solid rgba(34, 197, 94, 0.3); border-radius: var(--radius-md); padding: var(--spacing-4); margin-bottom: var(--spacing-4); display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                <i class="fas fa-check-circle" style="color: var(--color-success);"></i>
                <span style="color: var(--color-text-primary);"><%= success %></span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (locals.error) { %>
        <div style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05)); border: 1px solid rgba(239, 68, 68, 0.3); border-radius: var(--radius-md); padding: var(--spacing-4); margin-bottom: var(--spacing-4); display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center; gap: var(--spacing-2);">
                <i class="fas fa-exclamation-circle" style="color: var(--color-danger);"></i>
                <span style="color: var(--color-text-primary);"><%= error %></span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Forms Table/Cards -->
    <% if (forms && forms.length > 0) { %>
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Form</th>
                        <th>Stats</th>
                        <th>Submit Channel</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% forms.forEach(form => { %>
                        <tr>
                            <td>
                                <div>
                                    <div style="font-weight: var(--font-weight-semibold); color: var(--color-text-primary); margin-bottom: var(--spacing-1);"><%= form.form_name %></div>
                                    <div style="font-size: var(--font-size-sm); color: var(--color-text-muted);"><%= form.form_description || 'No description' %></div>
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; gap: var(--spacing-2); flex-wrap: wrap;">
                                    <span class="badge" style="background: var(--color-primary-500);"><%= form.question_count || 0 %> questions</span>
                                    <span class="badge badge-success"><%= form.submission_count || 0 %> responses</span>
                                </div>
                            </td>
                            <td>
                                <% if (form.submit_channel_id) { %>
                                    <% const channel = channels.find(c => c.id === form.submit_channel_id); %>
                                    <div style="display: flex; align-items: center; gap: var(--spacing-2); color: var(--color-text-secondary);">
                                        <i class="fas fa-hashtag" style="font-size: 0.75rem;"></i>
                                        <span><%= channel ? channel.name : 'Unknown' %></span>
                                    </div>
                                <% } else { %>
                                    <span style="color: var(--color-text-muted); font-size: var(--font-size-sm);">None</span>
                                <% } %>
                            </td>
                            <td class="text-end">
                                <div style="display: flex; gap: var(--spacing-2); justify-content: flex-end;">
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="editForm(<%= form.form_id %>, '<%= form.form_name.replace(/'/g, "\\'") %>', '<%= (form.form_description || '').replace(/'/g, "\\'") %>', '<%= form.submit_channel_id || '' %>')" title="Edit Form">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="viewQuestions(<%= form.form_id %>)" title="View Questions">
                                        <i class="fas fa-list"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="createPanel(<%= form.form_id %>, '<%= form.form_name.replace(/'/g, "\\'") %>')" title="Create Panel">
                                        <i class="fas fa-clipboard"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="viewSubmissions(<%= form.form_id %>)" title="View Submissions">
                                        <i class="fas fa-inbox"></i>
                                    </button>
                                    <form action="/manage/<%= guild.id %>/forms/delete/<%= form.form_id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this form and all its submissions?');">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="empty-state-title">No Forms Created</div>
            <div class="empty-state-description">
                Create your first form to start collecting user responses
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create-form-modal">
                <i class="fas fa-plus"></i>
                <span>Create First Form</span>
            </button>
        </div>
    <% } %>
</div>

<!-- Create Form Modal -->
<div class="modal fade" id="create-form-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400);">
            <form action="/manage/<%= guild.id %>/forms/create" method="POST">
                <div class="modal-header" style="border-bottom: 1px solid var(--color-dark-400);">
                    <h5 class="modal-title" style="color: var(--color-text-primary);"><i class="fas fa-plus"></i> Create New Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Form Name <span style="color: var(--color-danger);">*</span></label>
                        <input type="text" name="form_name" class="form-control" required>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Description</label>
                        <textarea name="form_description" class="form-control" rows="3"></textarea>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Submit to Channel (optional)</label>
                        <select name="submit_channel_id" class="form-select">
                            <option value="">None</option>
                            <% channels.forEach(c => { %>
                                <option value="<%= c.id %>">#<%= c.name %></option>
                            <% }); %>
                        </select>
                        <div class="form-help">When someone submits this form, send a message to this channel</div>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--color-dark-400);">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Form</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Form Modal -->
<div class="modal fade" id="edit-form-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400);">
            <form id="edit-form-form" method="POST">
                <div class="modal-header" style="border-bottom: 1px solid var(--color-dark-400);">
                    <h5 class="modal-title" style="color: var(--color-text-primary);"><i class="fas fa-edit"></i> Edit Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Form Name <span style="color: var(--color-danger);">*</span></label>
                        <input type="text" name="form_name" id="edit-form-name" class="form-control" required>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Description</label>
                        <textarea name="form_description" id="edit-form-description" class="form-control" rows="3"></textarea>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Submit to Channel (optional)</label>
                        <select name="submit_channel_id" id="edit-submit-channel" class="form-select">
                            <option value="">None</option>
                            <% channels.forEach(c => { %>
                                <option value="<%= c.id %>">#<%= c.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--color-dark-400);">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Questions Modal -->
<div class="modal fade" id="questions-modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400);">
            <div class="modal-header" style="border-bottom: 1px solid var(--color-dark-400);">
                <h5 class="modal-title" style="color: var(--color-text-primary);"><i class="fas fa-list"></i> Form Questions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="questions-list">
                    <div style="text-align: center; padding: var(--spacing-8);">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p style="margin-top: var(--spacing-2); color: var(--color-text-muted);">Loading questions...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="border-top: 1px solid var(--color-dark-400);">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="addQuestion()">
                    <i class="fas fa-plus"></i>
                    <span>Add Question</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- View Submissions Modal -->
<div class="modal fade" id="submissions-modal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400);">
            <div class="modal-header" style="border-bottom: 1px solid var(--color-dark-400);">
                <h5 class="modal-title" style="color: var(--color-text-primary);"><i class="fas fa-inbox"></i> Form Submissions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="submissions-list">
                    <div style="text-align: center; padding: var(--spacing-8);">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p style="margin-top: var(--spacing-2); color: var(--color-text-muted);">Loading submissions...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Panel Modal -->
<div class="modal fade" id="create-panel-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background: var(--color-dark-600); border: 1px solid var(--color-dark-400);">
            <form action="/manage/<%= guild.id %>/forms/create-panel" method="POST">
                <input type="hidden" name="form_id" id="panel-form-id">
                <div class="modal-header" style="border-bottom: 1px solid var(--color-dark-400);">
                    <h5 class="modal-title" style="color: var(--color-text-primary);"><i class="fas fa-clipboard"></i> Create Form Panel: <span id="panel-form-title"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Channel <span style="color: var(--color-danger);">*</span></label>
                        <select name="channel_id" class="form-select" required>
                            <option value="">Select a channel...</option>
                            <% channels.forEach(c => { %>
                                <option value="<%= c.id %>">#<%= c.name %></option>
                            <% }); %>
                        </select>
                        <div class="form-help">The channel where the form panel button will be posted</div>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Panel Title</label>
                        <input type="text" name="panel_title" class="form-control" placeholder="Click to fill out this form">
                        <div class="form-help">Optional custom title for the panel message</div>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Panel Description</label>
                        <textarea name="panel_description" class="form-control" rows="2" placeholder="Fill out this form to..."></textarea>
                        <div class="form-help">Optional description shown on the panel</div>
                    </div>
                    <div style="margin-bottom: var(--spacing-4);">
                        <label class="form-label">Button Text</label>
                        <input type="text" name="button_text" class="form-control" placeholder="Open Form">
                        <div class="form-help">Optional custom text for the button</div>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--color-dark-400);">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Panel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.table-container {
    overflow-x: auto;
    border: 1px solid var(--color-dark-400);
    border-radius: var(--radius-lg);
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

.data-table thead {
    background: var(--color-dark-600);
    border-bottom: 2px solid var(--color-dark-400);
}

.data-table th {
    padding: var(--spacing-4);
    text-align: left;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.data-table td {
    padding: var(--spacing-4);
    border-bottom: 1px solid var(--color-dark-400);
}

.data-table tbody tr {
    transition: background var(--transition-base);
}

.data-table tbody tr:hover {
    background: var(--color-dark-600);
}

.data-table tbody tr:last-child td {
    border-bottom: none;
}

.empty-state {
    text-align: center;
    padding: var(--spacing-12) var(--spacing-8);
}

.empty-state-icon {
    font-size: 4rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-4);
}

.empty-state-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.empty-state-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-6);
}

.form-label {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.form-help {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--spacing-2);
}

.modal-content {
    border-radius: var(--radius-lg);
}

.btn-close {
    filter: invert(1);
    opacity: 0.5;
}

.btn-close:hover {
    opacity: 1;
}
</style>

<script>
let currentFormId = null;

function editForm(formId, formName, formDescription, submitChannelId) {
    document.getElementById('edit-form-name').value = formName;
    document.getElementById('edit-form-description').value = formDescription || '';
    document.getElementById('edit-submit-channel').value = submitChannelId || '';
    document.getElementById('edit-form-form').action = `/manage/<%= guild.id %>/forms/edit/${formId}`;
    new bootstrap.Modal(document.getElementById('edit-form-modal')).show();
}

async function viewQuestions(formId) {
    currentFormId = formId;
    const modal = new bootstrap.Modal(document.getElementById('questions-modal'));
    modal.show();

    try {
        const response = await fetch(`/manage/<%= guild.id %>/forms/${formId}/questions`);
        const questions = await response.json();

        const listEl = document.getElementById('questions-list');

        if (questions.length === 0) {
            listEl.innerHTML = '<div style="text-align: center; color: var(--color-text-muted); padding: var(--spacing-8);">No questions yet. Add some!</div>';
            return;
        }

        listEl.innerHTML = questions.map((q, idx) => `
            <div style="background: var(--color-dark-700); border: 1px solid var(--color-dark-400); border-radius: var(--radius-md); padding: var(--spacing-4); margin-bottom: var(--spacing-3);">
                <div style="display: flex; justify-content: space-between; align-items-start;">
                    <div style="flex-grow: 1;">
                        <h6 style="color: var(--color-text-primary); margin-bottom: var(--spacing-2);">${idx + 1}. ${q.question_text}</h6>
                        <div style="display: flex; gap: var(--spacing-2); flex-wrap: wrap;">
                            <span class="badge badge-secondary">${q.question_type}</span>
                            ${q.is_required ? '<span class="badge badge-danger">Required</span>' : ''}
                            ${q.question_options ? `<span class="badge" style="background: var(--color-dark-600);">Options: ${q.question_options}</span>` : ''}
                        </div>
                    </div>
                    <form action="/manage/<%= guild.id %>/forms/questions/delete/${q.question_id}" method="POST" style="display: inline;" onsubmit="return confirm('Delete this question?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        `).join('');
    } catch (error) {
        document.getElementById('questions-list').innerHTML = '<div style="background: var(--color-danger); background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05)); border: 1px solid rgba(239, 68, 68, 0.3); border-radius: var(--radius-md); padding: var(--spacing-4); color: var(--color-text-primary);">Failed to load questions.</div>';
    }
}

async function viewSubmissions(formId) {
    const modal = new bootstrap.Modal(document.getElementById('submissions-modal'));
    modal.show();

    try {
        const response = await fetch(`/manage/<%= guild.id %>/forms/${formId}/submissions`);
        const submissions = await response.json();

        const listEl = document.getElementById('submissions-list');

        if (submissions.length === 0) {
            listEl.innerHTML = '<div style="text-align: center; color: var(--color-text-muted); padding: var(--spacing-8);">No submissions yet.</div>';
            return;
        }

        listEl.innerHTML = submissions.map(sub => {
            const data = JSON.parse(sub.submission_data);
            const dataHtml = Object.entries(data).map(([q, a]) => `
                <div style="margin-bottom: var(--spacing-3); padding-bottom: var(--spacing-3); border-bottom: 1px solid var(--color-dark-500);">
                    <strong style="color: var(--color-text-primary); display: block; margin-bottom: var(--spacing-1);">${q}:</strong>
                    <span style="color: var(--color-text-secondary);">${a || '<em>No answer</em>'}</span>
                </div>
            `).join('');

            return `
                <div style="background: var(--color-dark-700); border: 1px solid var(--color-dark-400); border-radius: var(--radius-md); margin-bottom: var(--spacing-4);">
                    <div style="background: var(--color-dark-600); padding: var(--spacing-3); border-bottom: 1px solid var(--color-dark-400); border-radius: var(--radius-md) var(--radius-md) 0 0;">
                        <strong style="color: var(--color-text-primary);">User ID:</strong> <span style="color: var(--color-text-secondary);">${sub.user_id}</span> &nbsp; | &nbsp;
                        <strong style="color: var(--color-text-primary);">Submitted:</strong> <span style="color: var(--color-text-secondary);">${new Date(sub.submitted_at).toLocaleString()}</span>
                    </div>
                    <div style="padding: var(--spacing-4);">
                        ${dataHtml}
                    </div>
                </div>
            `;
        }).join('');
    } catch (error) {
        document.getElementById('submissions-list').innerHTML = '<div style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05)); border: 1px solid rgba(239, 68, 68, 0.3); border-radius: var(--radius-md); padding: var(--spacing-4); color: var(--color-text-primary);">Failed to load submissions.</div>';
    }
}

function addQuestion() {
    if (!currentFormId) return;
    window.location.href = `/manage/<%= guild.id %>/forms/${currentFormId}/add-question`;
}

function createPanel(formId, formName) {
    document.getElementById('panel-form-id').value = formId;
    document.getElementById('panel-form-title').textContent = formName;
    new bootstrap.Modal(document.getElementById('create-panel-modal')).show();
}
</script>
