<%- include('partials/header', { user: locals.user || null }) %>

<main class="container">
    <div style="text-align: center; margin-bottom: 2rem;">
        <h1>Server Selection</h1>
        <p>Choose a server where you have Administrator permissions to manage.</p>
    </div>

    <div class="features-grid">
        <% if (guilds.length > 0) { %>
            <% guilds.forEach(guild => { %>
                <a href="/manage/<%= guild.id %>" class="feature-card" style="text-decoration: none;">
                    <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=128" alt="<%= guild.name %> icon" style="width: 80px; height: 80px; border-radius: 50%; margin-bottom: 1rem;">
                    <h3><%= guild.name %></h3>
                    <p>Click to manage</p>
                </a>
            <% }); %>
        <% } else { %>
            <p>You don't appear to have admin permissions in any servers where I'm also present. Please invite me to a server where you are an admin!</p>
        <% } %>
    </div>
</main>

</body>
</html>