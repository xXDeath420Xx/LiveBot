<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - CertiFried Announcer</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard-style.css">
</head>
<body>

<%- include('partials/header', { user: user }) %>

<main class="page-container">
    <div class="text-center mb-5">
        <img src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png` : `https://cdn.discordapp.com/embed/avatars/${user.discriminator % 5}.png` %>" alt="User Avatar" class="rounded-circle mb-3" width="128" height="128">
        <h1>Welcome, <%= user.username %>!</h1>
        <p class="lead text-muted">Select a server to manage.</p>
    </div>

    <div class="row g-4">
        <% manageableGuilds.forEach(guild => { %>
            <div class="col-md-6 col-lg-4">
                <a href="/manage/<%= guild.id %>" class="text-decoration-none">
                    <div class="content-card server-card h-100">
                        <div class="d-flex align-items-center">
                            <img src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" alt="Guild Icon" width="60" height="60" class="rounded me-3">
                            <div class="flex-grow-1">
                                <h5 class="mb-1"><%= guild.name %></h5>
                            </div>
                            <i class="fas fa-chevron-right ms-auto"></i>
                        </div>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>

    <% if (manageableGuilds.length === 0) { %>
        <div class="alert alert-warning text-center mt-4">
            No manageable servers found. Make sure you have the "Manage Server" permission.
        </div>
    <% } %>
</main>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>