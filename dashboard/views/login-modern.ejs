<%- include('partials/modern-header', {
    pageTitle: 'Login',
    additionalCSS: []
}) %>

<style>
/* Split Screen Login Layout */
.login-wrapper {
    min-height: calc(100vh - 200px);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    overflow: hidden;
}

/* Left Side - Discord Branding */
.login-brand-side {
    background: linear-gradient(135deg, #5865F2 0%, #4752C4 50%, #3a42a3 100%);
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
}

.login-brand-side::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
}

.login-brand-side::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
}

.brand-content {
    position: relative;
    z-index: 2;
}

.brand-logo {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 30px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    animation: float 4s ease-in-out infinite;
}

.brand-logo img {
    width: 60px;
    height: 60px;
    object-fit: contain;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.brand-title {
    color: white;
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 15px;
    line-height: 1.1;
    animation: slideIn 0.6s ease-out 0.1s backwards;
}

.brand-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 40px;
    animation: slideIn 0.6s ease-out 0.2s backwards;
}

.brand-features {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.brand-feature {
    display: flex;
    gap: 12px;
    align-items: flex-start;
    animation: slideIn 0.6s ease-out backwards;
    color: rgba(255, 255, 255, 0.95);
    font-size: 0.95rem;
}

.brand-feature:nth-child(1) { animation-delay: 0.3s; }
.brand-feature:nth-child(2) { animation-delay: 0.4s; }
.brand-feature:nth-child(3) { animation-delay: 0.5s; }
.brand-feature:nth-child(4) { animation-delay: 0.6s; }

.brand-feature-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: #a5d6ff;
    font-size: 1rem;
}

.brand-footer-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.85rem;
    position: relative;
    z-index: 2;
}

/* Right Side - Login Form */
.login-form-side {
    background: linear-gradient(135deg, #0f1419 0%, #1a1f2e 50%, #141820 100%);
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
}

.login-form-side::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
        radial-gradient(circle at 30% 30%, rgba(88, 101, 242, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(155, 89, 182, 0.08) 0%, transparent 50%);
    pointer-events: none;
}

.login-form-container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 400px;
}

.login-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 50px 40px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    animation: slideIn 0.7s ease-out 0.2s backwards;
}

.login-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #5865F2 0%, #4752C4 100%);
    border-radius: 16px;
    font-size: 2.5rem;
    color: white;
    box-shadow: 0 8px 24px rgba(88, 101, 242, 0.3);
}

.login-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 12px;
    text-align: center;
}

.login-subtitle {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    text-align: center;
    margin-bottom: 30px;
    line-height: 1.5;
}

.discord-btn {
    width: 100%;
    padding: 14px 20px;
    font-size: 1rem;
    font-weight: 600;
    background: linear-gradient(135deg, #5865F2 0%, #4752C4 100%);
    color: white;
    border: none;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    box-shadow: 0 4px 15px rgba(88, 101, 242, 0.3);
    margin-bottom: 20px;
    position: relative;
    overflow: hidden;
}

.discord-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.discord-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(88, 101, 242, 0.5);
    background: linear-gradient(135deg, #6b77f4 0%, #5860d4 100%);
}

.discord-btn:hover::before {
    left: 100%;
}

.discord-icon {
    font-size: 1.2rem;
}

.login-divider {
    display: flex;
    align-items: center;
    margin: 25px 0;
    gap: 15px;
}

.login-divider::before,
.login-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
}

.divider-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
    font-weight: 500;
}

.login-features {
    margin-top: 25px;
    padding-top: 25px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 12px;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.feature-item:hover {
    color: rgba(255, 255, 255, 0.95);
    padding-left: 5px;
}

.feature-icon {
    color: #5865F2;
    font-size: 1rem;
    flex-shrink: 0;
}

.login-footer {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
}

.login-footer a {
    color: #5865F2;
    text-decoration: none;
    transition: color 0.3s ease;
}

.login-footer a:hover {
    color: #6b77f4;
    text-decoration: underline;
}

/* Responsive */
@media (max-width: 1024px) {
    .login-wrapper {
        grid-template-columns: 1fr;
    }

    .login-brand-side {
        display: none;
    }

    .login-card {
        max-width: 100%;
    }
}

@media (max-width: 768px) {
    .login-form-side {
        padding: 40px 20px;
    }

    .login-card {
        padding: 35px 25px;
    }

    .login-title {
        font-size: 1.5rem;
    }

    .brand-title {
        font-size: 2rem;
    }

    .brand-features {
        gap: 12px;
    }
}
</style>

<div class="login-wrapper">
    <!-- Discord Branding Side -->
    <div class="login-brand-side">
        <div class="brand-content">
            <div class="brand-logo">
                <img src="/images/CertiFried.png" alt="CertiFried">
