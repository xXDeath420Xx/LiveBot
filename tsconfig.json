{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "useUnknownInCatchVariables": false,
    "lib": ["es5", "es6", "dom", "dom.iterable"]
  },
  "exclude": [
    "./node_modules"
  ]
}
